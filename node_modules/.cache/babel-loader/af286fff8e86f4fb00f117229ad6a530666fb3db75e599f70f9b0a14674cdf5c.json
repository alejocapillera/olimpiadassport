{"ast":null,"code":"import MenuPrincipal from \"@/components/MenuPrincipal.vue\";\nimport ProductosTienda from \"@/components/ProductosTienda.vue\";\nimport { BButton, BCollapse } from \"bootstrap-vue-3\";\nimport { vBToggle } from \"bootstrap-vue-3\";\nexport default {\n  components: {\n    MenuPrincipal,\n    ProductosTienda,\n    BButton,\n    BCollapse\n  },\n  directives: {\n    \"b-toggle\": vBToggle\n  }\n};","map":{"version":3,"names":["MenuPrincipal","ProductosTienda","BButton","BCollapse","vBToggle","components","directives"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\PaginaInicio.vue"],"sourcesContent":["<template>\n  <div>\n    <MenuPrincipal />\n\n    <div class=\"sidebar-container\">\n      <b-button v-b-toggle.sidebar-collapse class=\"menu-toggle\">\n        <i class=\"fa-solid fa-bars\"></i>\n      </b-button>\n\n      <b-collapse id=\"sidebar-collapse\" class=\"sidebar\">\n        <b-button class=\"close-btn\" v-b-toggle.sidebar-collapse>\n          <i class=\"fa-solid fa-times\"></i>Categorias\n        </b-button>\n\n        <section class=\"categorias\">\n          <h2>Categorias</h2>\n          <div class=\"categoria-list\">\n            <button class=\"button\" data-text=\"Ropa y Accesorios\">\n              Ropa y Accesorios\n            </button>\n            <button class=\"button\" data-text=\"Ciclismo\">Ciclismo</button>\n            <button class=\"button\" data-text=\"Camping\">Camping</button>\n            <button class=\"button\" data-text=\"Caza\">Caza</button>\n          </div>\n        </section>\n      </b-collapse>\n    </div>\n  </div>\n  <ProductosTienda />\n</template>\n\n<script>\nimport MenuPrincipal from \"@/components/MenuPrincipal.vue\";\nimport ProductosTienda from \"@/components/ProductosTienda.vue\";\n\nimport { BButton, BCollapse } from \"bootstrap-vue-3\";\nimport { vBToggle } from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    MenuPrincipal,\n    ProductosTienda,\n    BButton,\n    BCollapse,\n  },\n  directives: {\n    \"b-toggle\": vBToggle,\n  },\n};\n</script>\n\n<style scoped>\n.sidebar-container {\n  position: relative;\n  display: flex;\n}\n\n.menu-toggle {\n  position: absolute;\n  left: 10px;\n  top: 10px;\n  z-index: 1000;\n}\n\n.sidebar {\n  position: absolute;\n  top: 0;\n  left: 0;\n  height: 100%;\n  width: 350px;\n  background-color: #46f06a;\n  border: 1px solid #ddd;\n  transform: translateX(-100%);\n  transition: transform 0.3s ease;\n}\n\n.sidebar.show {\n  transform: translateX(0);\n}\n\n.close-btn {\n  position: absolute;\n  top: 10px;\n  right: 10px;\n  z-index: 1001;\n  background-color: transparent;\n  border: none;\n  font-size: 24px;\n  color: red;\n}\n\n.categorias {\n  padding: 20px;\n  text-align: center;\n}\n\n.categoria-list {\n  display: flex;\n  flex-direction: column;\n  gap: 20px;\n}\n\n.button {\n  cursor: pointer;\n  position: relative;\n  padding: 10px 24px;\n  font-size: 18px;\n  color: #0a641a; /* Usando el color verde personalizado */\n  border: 2px solid #0a641a; /* Borde con el color verde */\n  border-radius: 34px;\n  background-color: transparent;\n  font-weight: 600;\n  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);\n  overflow: hidden;\n}\n\n.button::before {\n  content: \"\";\n  position: absolute;\n  inset: 0;\n  margin: auto;\n  width: 105px;\n  height: 50px;\n  border-radius: inherit;\n  scale: 0;\n  z-index: -1;\n  background-color: #0a641a; /* Color verde al hacer hover */\n  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);\n}\n\n.button:hover::before {\n  scale: 3;\n}\n\n.button:hover {\n  color: #ff9800; /* Color naranja en el hover */\n  scale: 1.1;\n  box-shadow: 0 0px 20px rgba(10, 100, 26, 0.4); /* Sombras del verde en el hover */\n}\n.button:active {\n  scale: 1;\n}\n</style>\n"],"mappings":"AAgCA,OAAOA,aAAY,MAAO,gCAAgC;AAC1D,OAAOC,eAAc,MAAO,kCAAkC;AAE9D,SAASC,OAAO,EAAEC,SAAQ,QAAS,iBAAiB;AACpD,SAASC,QAAO,QAAS,iBAAiB;AAE1C,eAAe;EACbC,UAAU,EAAE;IACVL,aAAa;IACbC,eAAe;IACfC,OAAO;IACPC;EACF,CAAC;EACDG,UAAU,EAAE;IACV,UAAU,EAAEF;EACd;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}