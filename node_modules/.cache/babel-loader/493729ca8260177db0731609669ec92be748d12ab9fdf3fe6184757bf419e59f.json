<template>\n  <div class=\"carrito\">\n    <div class=\"header-carrito\" @click=\"toggleSidebar\">\n      <h3>Carrito de compras</h3>\n      <button class=\"btn-minimizar\">\n        <i class=\"fas fa-chevron-left\"></i>\n      </button>\n    </div>\n    <div v-if=\"carrito.length > 0\" class=\"contenido-carrito\">\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"index\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }} x {{ item.cantidad }}\n          <button class=\"btn-eliminar\" @click=\"eliminarDelCarrito(index)\">\n            Eliminar\n          </button>\n        </li>\n      </ul>\n      <p>Total: ${{ totalCarrito }}</p>\n\n      <div class=\"seleccion-pago\">\n        <h4>Selecciona el método de pago</h4>\n        <select v-model=\"metodo_pago_id\">\n          <option v-for=\"metodo in metodosPago\" :key=\"metodo.id\" :value=\"metodo.id\">\n            {{ metodo.nombre }}\n          </option>\n        </select>\n      </div>\n\n      <button class=\"btn-procesar\" @click=\"procesarCompra\">\n        Finalizar compra\n      </button>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  data() {\n    return {\n      carrito: [],\n      totalCarrito: 0,\n      metodo_pago_id: 1, // Default method of payment\n      metodosPago: [],\n    };\n  },\n  methods: {\n    toggleSidebar() {\n      const sidebar = document.querySelector('.carrito');\n      sidebar.classList.toggle('minimizado');\n    },\n    async fetchMetodosPago() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/metodos_pago\");\n        if (Array.isArray(response.data)) {\n          this.metodosPago = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener métodos de pago:\", error);\n      }\n    },\n    async procesarCompra() {\n      const token = localStorage.getItem(\"token\");\n      const id_cliente = localStorage.getItem(\"id_cliente\");\n\n      if (!token || !id_cliente) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n\n      try {\n        const response = await axios.post(\n          \"http://localhost:3001/api/auth/venta\",\n          {\n            id_cliente,\n            productos: this.carrito,\n            total: this.totalCarrito,\n            metodo_pago_id: this.metodo_pago_id,\n          },\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Compra realizada exitosamente!\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          this.metodo_pago_id = 1;\n        } else {\n          alert(\"Error al procesar la compra.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la compra:\", error);\n        alert(\"Error al procesar la compra.\");\n      }\n    },\n    async eliminarDelCarrito(index) {\n      const token = localStorage.getItem(\"token\");\n      const producto = this.carrito[index];\n\n      try {\n        const response = await axios.delete(\n          `http://localhost:3001/api/auth/carrito/${producto.id_carrito_producto}`,\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Producto eliminado del carrito\") {\n          this.carrito.splice(index, 1);\n          this.actualizarTotal();\n        } else {\n          alert(\"Error al eliminar el producto del carrito.\");\n        }\n      } catch (error) {\n        console.error(\"Error al eliminar del carrito:\", error);\n        alert(\"Error al eliminar el producto del carrito.\");\n      }\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n  },\n  mounted() {\n    this.fetchMetodosPago();\n  },\n};\n</script>\n\n<style scoped>\n/* Aquí van los estilos del sidebar y el proceso de compra */\n\n.carrito {\n  font-weight: bold;\n  position: fixed;\n  right: 0;\n  top: 0;\n  width: 350px;\n  background-color: #fff;\n  border: 1px solid #ccc;\n  padding: 20px;\n  border-radius: 8px;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  transition: transform 0.3s ease;\n  transform: translateX(100%);\n}\n\n.carrito.minimizado {\n  transform: translateX(0);\n}\n\n.header-carrito {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  cursor: pointer;\n}\n\n.header-carrito h3 {\n  margin: 0;\n}\n\n.btn-minimizar {\n  background: none;\n  border: none;\n  font-size: 1.5em;\n  cursor: pointer;\n}\n\n.seleccion-pago {\n  margin-top: 20px;\n}\n\n.seleccion-pago select {\n  width: 100%;\n  padding: 10px;\n  border: 1px solid #ccc;\n  border-radius: 5px;\n}\n</style>\n"],"mappings":";;;EACOA,KAAK,EAAC;AAAS;gEAEhBC,mBAAA,CAA2B,YAAvB,oBAAkB;gEACtBA,mBAAA,CAES;EAFDD,KAAK,EAAC;AAAe,I,aAC3BC,mBAAA,CAAmC;EAAhCD,KAAK,EAAC;AAAqB,G;oBAFhCE,UAA2B,EAC3BC,UAES,C;;EANfC,GAAA;EAQmCJ,KAAK,EAAC;;mBARzC;;EAmBWA,KAAK,EAAC;AAAgB;gEACzBC,mBAAA,CAAqC,YAAjC,8BAA4B;mBApBxC;;uBACEI,mBAAA,CA+BM,OA/BNC,UA+BM,GA9BJL,mBAAA,CAKM;IALDD,KAAK,EAAC,gBAAgB;IAAEO,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAC,aAAA,IAAAD,QAAA,CAAAC,aAAA,IAAAF,IAAA,CAAa;KAFrD,IAAAG,UAAA,IAQeC,KAAA,CAAAC,OAAO,CAACC,MAAM,Q,cAAzBV,mBAAA,CAuBM,OAvBNW,UAuBM,GAtBJf,mBAAA,CAOK,c,kBANHI,mBAAA,CAKKY,SAAA,QAfbC,WAAA,CAUoCL,KAAA,CAAAC,OAAO,EAV3C,CAUoBK,IAAI,EAAEC,KAAK;yBAAvBf,mBAAA,CAKK;MALiCD,GAAG,EAAEgB;IAAK,IAVxDC,gBAAA,CAAAC,gBAAA,CAWaH,IAAI,CAACI,WAAW,IAAG,MAAI,GAAAD,gBAAA,CAAGH,IAAI,CAACK,eAAe,IAAG,KAAG,GAAAF,gBAAA,CAAGH,IAAI,CAACM,QAAQ,IAAG,GAC1E,iBAAAxB,mBAAA,CAES;MAFDD,KAAK,EAAC,cAAc;MAAEO,OAAK,EAAAmB,MAAA,IAAEhB,QAAA,CAAAiB,kBAAkB,CAAC