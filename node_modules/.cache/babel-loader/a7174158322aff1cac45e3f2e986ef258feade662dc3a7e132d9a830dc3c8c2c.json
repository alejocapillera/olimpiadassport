{"ast":null,"code":"export default {\n  props: {\n    categoriaSeleccionada: {\n      type: String,\n      default: \"\"\n    }\n  },\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: null,\n      sidebarAbierto: false,\n      // Métodos de pago estáticos\n      metodosPago: [{\n        id: 1,\n        nombre: 'Tarjeta de crédito'\n      }, {\n        id: 2,\n        nombre: 'PayPal'\n      }, {\n        id: 3,\n        nombre: 'Transferencia bancaria'\n      }]\n    };\n  },\n  computed: {\n    productosFiltrados() {\n      if (this.categoriaSeleccionada) {\n        return this.productos.filter(producto => producto.nombre_subcategoria === this.categoriaSeleccionada);\n      }\n      return this.productos;\n    }\n  },\n  methods: {\n    toggleSidebar() {\n      this.sidebarAbierto = !this.sidebarAbierto;\n    },\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\", {\n          params: {\n            categoria: this.categoriaSeleccionada // Enviar la categoría seleccionada como parámetro de consulta\n          }\n        });\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    async agregarCarrito(producto) {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n      try {\n        const response = await axios.post(\"http://localhost:3001/api/auth/carrito\", {\n          id_cliente: this.id_cliente,\n          id_producto: producto.id_producto,\n          cantidad: 1\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Producto agregado al carrito\") {\n          this.carrito = response.data.carrito;\n          this.actualizarTotal();\n        } else {\n          alert(\"Error al agregar el producto al carrito.\");\n        }\n      } catch (error) {\n        console.error(\"Error al agregar al carrito:\", error);\n        alert(\"Error al agregar el producto al carrito.\");\n      }\n    },\n    async eliminarDelCarrito(index) {\n      const token = localStorage.getItem(\"token\");\n      const producto = this.carrito[index];\n      try {\n        const response = await axios.delete(`http://localhost:3001/api/auth/carrito/${producto.id_carrito_producto}`, {\n          headers: {\n            Authorization: `Bearer ${token}` // Enviar el token como cadena\n          }\n        });\n        if (response.data.message === \"Producto eliminado del carrito\") {\n          this.carrito.splice(index, 1);\n          this.actualizarTotal();\n        } else {\n          alert(\"Error al eliminar el producto del carrito.\");\n        }\n      } catch (error) {\n        console.error(\"Error al eliminar del carrito:\", error);\n        alert(\"Error al eliminar el producto del carrito.\");\n      }\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    async procesarVenta() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n      if (!token || !this.id_cliente || this.metodo_pago_id === null) {\n        alert(\"Por favor, complete todos los campos antes de procesar la venta.\");\n        return;\n      }\n      try {\n        const response = await axios.post(\"http://localhost:3001/api/procesar_venta\", {\n          id_cliente: this.id_cliente,\n          metodo_pago_id: this.metodo_pago_id,\n          carrito: this.carrito,\n          total: this.totalCarrito\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Venta procesada correctamente\") {\n          alert(\"Compra realizada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          this.metodo_pago_id = null;\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["props","categoriaSeleccionada","type","String","default","data","productos","carrito","totalCarrito","id_cliente","metodo_pago_id","sidebarAbierto","metodosPago","id","nombre","computed","productosFiltrados","filter","producto","nombre_subcategoria","methods","toggleSidebar","fetchProductos","response","axios","get","params","categoria","Array","isArray","console","error","agregarCarrito","token","localStorage","getItem","alert","post","id_producto","cantidad","headers","Authorization","message","actualizarTotal","eliminarDelCarrito","index","delete","id_carrito_producto","splice","reduce","total","item","precio_unitario","procesarVenta","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ProductosTienda.vue"],"sourcesContent":["<template>\n  <div class=\"productos-tienda\">\n    <!-- Contenedor de productos -->\n    <div v-if=\"productosFiltrados.length > 0\" class=\"productos-grid\">\n      <div\n        v-for=\"producto in productosFiltrados\"\n        :key=\"producto.id_producto\"\n        class=\"producto-card\"\n      >\n        <div class=\"producto-descripcion\">\n          <h3>{{ producto.descripcion }}</h3>\n          <p>Precio: ${{ producto.precio_unitario }}</p>\n        </div>\n        <div class=\"producto-acciones\">\n          <button @click=\"agregarCarrito(producto)\" class=\"btn-agregar\">\n            <i class=\"fas fa-shopping-cart icono-carrito\"></i> Agregar al\n            carrito\n          </button>\n        </div>\n      </div>\n    </div>\n    <div v-else>\n      <p>No hay productos disponibles.</p>\n    </div>\n\n    <!-- Botón para abrir el sidebar -->\n    <button @click=\"toggleSidebar\" class=\"btn-sidebar\">\n      <i class=\"fas fa-shopping-cart icono-carrito\"></i> Ver carrito\n    </button>\n\n    <!-- Sidebar del carrito -->\n    <div :class=\"['sidebar', { 'sidebar-abierto': sidebarAbierto }]\">\n      <button @click=\"toggleSidebar\" class=\"btn-cerrar\">X</button>\n      <h3>Carrito de compras</h3>\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"item.id_carrito_producto\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }} x\n          {{ item.cantidad }}\n          <button class=\"btn-eliminar\" @click=\"eliminarDelCarrito(index)\">\n            Eliminar\n          </button>\n        </li>\n      </ul>\n      <p>Total: ${{ totalCarrito }}</p>\n      <div class=\"formulario-venta\">\n        <h4>Selecciona el método de pago</h4>\n        <select v-model=\"metodo_pago_id\">\n          <option\n            v-for=\"metodo in metodosPago\"\n            :key=\"metodo.id\"\n            :value=\"metodo.id\"\n          >\n            {{ metodo.nombre }}\n          </option>\n        </select>\n        <button class=\"btn-procesar\" @click=\"procesarVenta\">\n          Finalizar compra\n        </button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  props: {\n    categoriaSeleccionada: {\n      type: String,\n      default: \"\",\n    },\n  },\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: null,\n      sidebarAbierto: false,\n      // Métodos de pago estáticos\n      metodosPago: [\n        { id: 1, nombre: 'Tarjeta de crédito' },\n        { id: 2, nombre: 'PayPal' },\n        { id: 3, nombre: 'Transferencia bancaria' },\n      ],\n    };\n  },\n  computed: {\n    productosFiltrados() {\n      if (this.categoriaSeleccionada) {\n        return this.productos.filter(\n          (producto) =>\n            producto.nombre_subcategoria === this.categoriaSeleccionada\n        );\n      }\n      return this.productos;\n    },\n  },\n  methods: {\n    toggleSidebar() {\n      this.sidebarAbierto = !this.sidebarAbierto;\n    },\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\", {\n          params: {\n            categoria: this.categoriaSeleccionada, // Enviar la categoría seleccionada como parámetro de consulta\n          },\n        });\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    async agregarCarrito(producto) {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n\n      try {\n        const response = await axios.post(\n          \"http://localhost:3001/api/auth/carrito\",\n          {\n            id_cliente: this.id_cliente,\n            id_producto: producto.id_producto,\n            cantidad: 1,\n          },\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Producto agregado al carrito\") {\n          this.carrito = response.data.carrito;\n          this.actualizarTotal();\n        } else {\n          alert(\"Error al agregar el producto al carrito.\");\n        }\n      } catch (error) {\n        console.error(\"Error al agregar al carrito:\", error);\n        alert(\"Error al agregar el producto al carrito.\");\n      }\n    },\n    async eliminarDelCarrito(index) {\n      const token = localStorage.getItem(\"token\");\n      const producto = this.carrito[index];\n\n      try {\n        const response = await axios.delete(\n          `http://localhost:3001/api/auth/carrito/${producto.id_carrito_producto}`,\n          {\n            headers: {\n              Authorization: `Bearer ${token}`, // Enviar el token como cadena\n            },\n          }\n        );\n\n        if (response.data.message === \"Producto eliminado del carrito\") {\n          this.carrito.splice(index, 1);\n          this.actualizarTotal();\n        } else {\n          alert(\"Error al eliminar el producto del carrito.\");\n        }\n      } catch (error) {\n        console.error(\"Error al eliminar del carrito:\", error);\n        alert(\"Error al eliminar el producto del carrito.\");\n      }\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    async procesarVenta() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n\n      if (!token || !this.id_cliente || this.metodo_pago_id === null) {\n        alert(\"Por favor, complete todos los campos antes de procesar la venta.\");\n        return;\n      }\n\n      try {\n        const response = await axios.post(\n          \"http://localhost:3001/api/procesar_venta\",\n          {\n            id_cliente: this.id_cliente,\n            metodo_pago_id: this.metodo_pago_id,\n            carrito: this.carrito,\n            total: this.totalCarrito,\n          },\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Venta procesada correctamente\") {\n          alert(\"Compra realizada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          this.metodo_pago_id = null;\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n/* Estilos (no cambiados) */\n.productos-tienda {\n  padding: 20px;\n  background-color: #f5f5f5;\n  position: relative;\n}\n\n.productos-grid {\n  font-weight: bold;\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n  justify-content: center;\n}\n\n.producto-card {\n  border: 1px solid #ddd;\n  padding: 20px;\n  width: 250px;\n  text-align: center;\n  background-color: #fff;\n  border-radius: 10px;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  transition: transform 0.2s;\n  position: relative;\n}\n\n.producto-card:hover {\n  transform: scale(1.05);\n}\n\n.producto-descripcion h3 {\n  font-weight: bold;\n  margin: 0;\n  font-size: 20px;\n  color: #333;\n}\n\n.producto-descripcion p {\n  font-size: 18px;\n  color: #555;\n}\n\n.producto-acciones {\n  margin-top: 15px;\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.producto-acciones button {\n  margin: 5px;\n  padding: 10px 20px;\n  font-size: 16px;\n  background-color: #007bff;\n  color: #fff;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n}\n\n.producto-acciones button:hover {\n  background-color: #0056b3;\n}\n\n.btn-sidebar {\n  position: fixed;\n  top: 20px;\n  right: 20px;\n  background-color: #007bff;\n  color: #fff;\n  border: none;\n  border-radius: 50%;\n  padding: 10px;\n  cursor: pointer;\n}\n\n.btn-cerrar {\n  background-color: #ff0000;\n  color: #fff;\n  border: none;\n  border-radius: 5px;\n  padding: 5px 10px;\n  cursor: pointer;\n}\n\n.sidebar {\n  position: fixed;\n  top: 0;\n  right: 0;\n  width: 300px;\n  height: 100%;\n  background-color: #fff;\n  border-left: 2px solid #ddd;\n  box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);\n  padding: 20px;\n  transform: translateX(100%);\n  transition: transform 0.3s ease;\n}\n\n.sidebar-abierto {\n  transform: translateX(0);\n}\n\n.sidebar h3 {\n  margin-top: 0;\n  font-size: 24px;\n}\n\nul {\n  list-style: none;\n  padding: 0;\n}\n\nli {\n  margin-bottom: 10px;\n}\n\n.btn-eliminar {\n  background-color: #dc3545;\n  color: #fff;\n  border: none;\n  border-radius: 5px;\n  padding: 5px 10px;\n  cursor: pointer;\n}\n\n.btn-eliminar:hover {\n  background-color: #c82333;\n}\n\n.formulario-venta {\n  margin-top: 20px;\n}\n\n.formulario-venta select,\n.formulario-venta button {\n  width: 100%;\n  padding: 10px;\n  margin: 5px 0;\n}\n</style>\n"],"mappings":"AAgEA,eAAe;EACbA,KAAK,EAAE;IACLC,qBAAqB,EAAE;MACrBC,IAAI,EAAEC,MAAM;MACZC,OAAO,EAAE;IACX;EACF,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,EAAE;MACXC,YAAY,EAAE,CAAC;MACfC,UAAU,EAAE,IAAI;MAChBC,cAAc,EAAE,IAAI;MACpBC,cAAc,EAAE,KAAK;MACrB;MACAC,WAAW,EAAE,CACX;QAAEC,EAAE,EAAE,CAAC;QAAEC,MAAM,EAAE;MAAqB,CAAC,EACvC;QAAED,EAAE,EAAE,CAAC;QAAEC,MAAM,EAAE;MAAS,CAAC,EAC3B;QAAED,EAAE,EAAE,CAAC;QAAEC,MAAM,EAAE;MAAyB,CAAC;IAE/C,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,kBAAkBA,CAAA,EAAG;MACnB,IAAI,IAAI,CAACf,qBAAqB,EAAE;QAC9B,OAAO,IAAI,CAACK,SAAS,CAACW,MAAM,CACzBC,QAAQ,IACPA,QAAQ,CAACC,mBAAkB,KAAM,IAAI,CAAClB,qBAC1C,CAAC;MACH;MACA,OAAO,IAAI,CAACK,SAAS;IACvB;EACF,CAAC;EACDc,OAAO,EAAE;IACPC,aAAaA,CAAA,EAAG;MACd,IAAI,CAACV,cAAa,GAAI,CAAC,IAAI,CAACA,cAAc;IAC5C,CAAC;IACD,MAAMW,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMC,KAAK,CAACC,G