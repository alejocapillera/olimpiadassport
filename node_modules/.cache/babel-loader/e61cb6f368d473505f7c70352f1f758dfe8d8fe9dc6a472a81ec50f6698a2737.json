{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  props: {\n    categoriaSeleccionada: {\n      type: String,\n      default: \"\"\n    }\n  },\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: 1,\n      minimizado: false,\n      isDragging: false,\n      dragStartX: 0,\n      dragStartY: 0,\n      carritoOffsetX: 0,\n      carritoOffsetY: 0\n    };\n  },\n  computed: {\n    productosFiltrados() {\n      if (this.categoriaSeleccionada) {\n        return this.productos.filter(producto => producto.nombre_subcategoria === this.categoriaSeleccionada);\n      }\n      return this.productos;\n    }\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\", {\n          params: {\n            categoria: this.categoriaSeleccionada\n          }\n        });\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      const itemEnCarrito = this.carrito.find(item => item.id_producto === producto.id_producto);\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({\n          ...producto,\n          cantidad: 1\n        });\n      }\n      this.actualizarTotal();\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.actualizarTotal();\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    async procesarVenta() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n      try {\n        const response = await axios.post(\"http://localhost:3001/api/auth/venta\", {\n          id_cliente: this.id_cliente,\n          productos: this.carrito.map(p => ({\n            id_producto: p.id_producto,\n            cantidad: p.cantidad,\n            precio_unitario: parseFloat(p.precio_unitario)\n          })),\n          total: parseFloat(this.totalCarrito),\n          metodo_pago_id: this.metodo_pago_id\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Venta procesada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    },\n    startDrag(e) {\n      this.isDragging = true;\n      this.dragStartX = e.clientX;\n      this.dragStartY = e.clientY;\n      const carritoRect = this.$refs.carrito.getBoundingClientRect();\n      this.carritoOffsetX = e.clientX - carritoRect.left;\n      this.carritoOffsetY = e.clientY - carritoRect.top;\n      e.preventDefault(); // Evita la selección de texto durante el arrastre\n    },\n    onDrag(e) {\n      if (this.isDragging) {\n        const x = e.clientX - this.carritoOffsetX;\n        const y = e.clientY - this.carritoOffsetY;\n        this.$refs.carrito.style.left = `${x}px`;\n        this.$refs.carrito.style.top = `${y}px`;\n        e.preventDefault(); // Evita la selección de texto durante el arrastre\n      }\n    },\n    stopDrag() {\n      this.isDragging = false;\n    },\n    toggleMinimizar() {\n      this.minimizado = !this.minimizado;\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","props","categoriaSeleccionada","type","String","default","data","productos","carrito","totalCarrito","id_cliente","metodo_pago_id","minimizado","isDragging","dragStartX","dragStartY","carritoOffsetX","carritoOffsetY","computed","productosFiltrados","filter","producto","nombre_subcategoria","methods","fetchProductos","response","get","params","categoria","Array","isArray","console","error","agregarCarrito","itemEnCarrito","find","item","id_producto","cantidad","push","actualizarTotal","eliminarDelCarrito","index","splice","reduce","total","precio_unitario","procesarVenta","token","localStorage","getItem","alert","post","map","p","parseFloat","headers","Authorization","message","startDrag","e","clientX","clientY","carritoRect","$refs","getBoundingClientRect","left","top","preventDefault","onDrag","x","y","style","stopDrag","toggleMinimizar","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ProductosTienda.vue"],"sourcesContent":["<template>\n  <div\n    class=\"carrito\"\n    ref=\"carrito\"\n    @mousedown=\"startDrag\"\n    @mousemove=\"onDrag\"\n    @mouseup=\"stopDrag\"\n    :class=\"['carrito', { minimizado: minimizado }]\"\n    @click=\"toggleMinimizar\"\n  >\n    <div class=\"header-carrito\">\n      <h3 v-if=\"!minimizado\">Carrito de compras</h3>\n      <button class=\"btn-minimizar\" @click.stop=\"toggleMinimizar\">\n        <i\n          class=\"fas\"\n          :class=\"minimizado ? 'fa-chevron-right' : 'fa-chevron-left'\"\n        ></i>\n      </button>\n    </div>\n    <div v-if=\"!minimizado\">\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"index\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }} x\n          {{ item.cantidad }}\n          <button class=\"btn-eliminar\" @click=\"eliminarDelCarrito(index)\">\n            Eliminar\n          </button>\n        </li>\n      </ul>\n      <p>Total: ${{ totalCarrito }}</p>\n      <b-form-select v-model=\"metodo_pago_id\" class=\"form-select\">\n        <b-form-select-option value=\"1\"\n          >Tarjeta de Crédito</b-form-select-option\n        >\n        <b-form-select-option value=\"2\">Mercadopago</b-form-select-option>\n        <b-form-select-option value=\"3\">Rapipago</b-form-select-option>\n      </b-form-select>\n      <button class=\"btn-procesar\" @click=\"procesarVenta\">\n        Procesar venta\n      </button>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  props: {\n    categoriaSeleccionada: {\n      type: String,\n      default: \"\",\n    },\n  },\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: 1,\n      minimizado: false,\n      isDragging: false,\n      dragStartX: 0,\n      dragStartY: 0,\n      carritoOffsetX: 0,\n      carritoOffsetY: 0,\n    };\n  },\n  computed: {\n    productosFiltrados() {\n      if (this.categoriaSeleccionada) {\n        return this.productos.filter(\n          (producto) =>\n            producto.nombre_subcategoria === this.categoriaSeleccionada\n        );\n      }\n      return this.productos;\n    },\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\", {\n          params: {\n            categoria: this.categoriaSeleccionada,\n          },\n        });\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      const itemEnCarrito = this.carrito.find(\n        (item) => item.id_producto === producto.id_producto\n      );\n\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({ ...producto, cantidad: 1 });\n      }\n\n      this.actualizarTotal();\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.actualizarTotal();\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    async procesarVenta() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n\n      try {\n        const response = await axios.post(\n          \"http://localhost:3001/api/auth/venta\",\n          {\n            id_cliente: this.id_cliente,\n            productos: this.carrito.map((p) => ({\n              id_producto: p.id_producto,\n              cantidad: p.cantidad,\n              precio_unitario: parseFloat(p.precio_unitario),\n            })),\n            total: parseFloat(this.totalCarrito),\n            metodo_pago_id: this.metodo_pago_id,\n          },\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Venta procesada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    },\n    startDrag(e) {\n      this.isDragging = true;\n      this.dragStartX = e.clientX;\n      this.dragStartY = e.clientY;\n\n      const carritoRect = this.$refs.carrito.getBoundingClientRect();\n      this.carritoOffsetX = e.clientX - carritoRect.left;\n      this.carritoOffsetY = e.clientY - carritoRect.top;\n\n      e.preventDefault(); // Evita la selección de texto durante el arrastre\n    },\n    onDrag(e) {\n      if (this.isDragging) {\n        const x = e.clientX - this.carritoOffsetX;\n        const y = e.clientY - this.carritoOffsetY;\n        this.$refs.carrito.style.left = `${x}px`;\n        this.$refs.carrito.style.top = `${y}px`;\n        e.preventDefault(); // Evita la selección de texto durante el arrastre\n      }\n    },\n    stopDrag() {\n      this.isDragging = false;\n    },\n    toggleMinimizar() {\n      this.minimizado = !this.minimizado;\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-tienda {\n  padding: 20px;\n  background-color: #f5f5f5;\n  position: relative;\n}\n\n.productos-grid {\n  font-weight: bold;\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n  justify-content: center;\n}\n\n.producto-card {\n  border: 1px solid #ddd;\n  padding: 20px;\n  width: 250px;\n  text-align: center;\n  background-color: #fff;\n  border-radius: 10px;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  transition: transform 0.2s;\n  position: relative;\n}\n\n.producto-card:hover {\n  transform: scale(1.05);\n}\n\n.producto-descripcion h3 {\n  font-weight: bold;\n  margin: 0;\n  font-size: 20px;\n  color: #333;\n}\n\n.producto-descripcion p {\n  font-size: 18px;\n  color: #555;\n}\n\n.producto-acciones {\n  margin-top: 15px;\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.producto-acciones button {\n  margin: 5px;\n  padding: 10px 20px;\n  background-color: #0a641a;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  font-weight: bold;\n  transition: background-color 0.3s;\n  display: flex;\n  align-items: center;\n}\n\n.producto-acciones button:hover {\n  background-color: #09831f;\n}\n\n.icono-caja {\n  color: #f1c40f;\n  font-size: 55px;\n}\n\n.carrito {\n  font-weight: bold;\n  position: fixed;\n  right: 20px;\n  top: 20px;\n  width: 350px;\n  background-color: #fff;\n  border: 1px solid #ccc;\n  padding: 20px;\n  border-radius: 8px;\n  overflow-y: auto;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  cursor: move; /* Cursor de arrastre */\n}\n.carrito h3 {\n  font-weight: bold;\n}\n.carrito ul {\n  list-style-type: none;\n  padding: 0;\n  margin: 0;\n}\n\n.carrito li {\n  display: flex;\n  justify-content: space-between;\n  margin-bottom: 15px;\n  font-size: 16px;\n}\n\n.carrito.minimizado {\n  transform: translateX(0);\n}\n\n.carrito .header-carrito {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  cursor: pointer;\n}\n\n.carrito .header-carrito h3 {\n  margin: 0;\n}\n\n.carrito .btn-minimizar {\n  background: none;\n  border: none;\n  font-size: 1.5em;\n  cursor: pointer;\n}\n\n.btn-agregar {\n  background-color: #28a745;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 10px 20px;\n  cursor: pointer;\n  transition: background-color 0.3s;\n}\n\n.btn-agregar:hover {\n  background-color: #218838;\n}\n\n.btn-procesar {\n  background-color: #007bff;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 10px 20px;\n  cursor: pointer;\n  font-weight: bold;\n  transition: background-color 0.3s;\n}\n\n.btn-procesar:hover {\n  background-color: #0056b3;\n}\n\n.btn-eliminar {\n  background-color: #dc3545;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 5px 10px;\n  cursor: pointer;\n  font-weight: bold;\n}\n\n.btn-eliminar:hover {\n  background-color: #c82333;\n}\n\n</style>\n"],"mappings":";AA6CA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,KAAK,EAAE;IACLC,qBAAqB,EAAE;MACrBC,IAAI,EAAEC,MAAM;MACZC,OAAO,EAAE;IACX;EACF,CAAC;EACDC,IAAIA