{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: []\n    };\n  },\n  computed: {\n    totalCarrito() {\n      return this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    }\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      if (!localStorage.getItem(\"token\")) {\n        alert(\"Por favor, inicia sesión para agregar productos al carrito.\");\n        return;\n      }\n      const itemEnCarrito = this.carrito.find(item => item.id_producto === producto.id_producto);\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({\n          ...producto,\n          cantidad: 1\n        });\n      }\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n    },\n    async procesarCompra() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.post(\"http://localhost:3001/api/procesar-compra\", {\n          carrito: this.carrito\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.success) {\n          alert(\"Compra procesada con éxito.\");\n          this.carrito = [];\n        } else {\n          alert(\"Hubo un error al procesar la compra.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la compra:\", error);\n      }\n    },\n    comprarAhora(producto) {\n      if (!localStorage.getItem(\"token\")) {\n        alert(\"Por favor, inicia sesión para comprar productos.\");\n        return;\n      }\n      this.carrito.push({\n        ...producto,\n        cantidad: 1\n      });\n      this.procesarCompra();\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","data","productos","carrito","computed","totalCarrito","reduce","total","item","precio_unitario","cantidad","methods","fetchProductos","response","get","Array","isArray","console","error","agregarCarrito","producto","localStorage","getItem","alert","itemEnCarrito","find","id_producto","push","eliminarDelCarrito","index","splice","procesarCompra","token","post","headers","Authorization","success","comprarAhora","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ProductosTienda.vue"],"sourcesContent":["<template>\n  <div class=\"productos-tienda\">\n    <div v-if=\"productos.length > 0\" class=\"productos-grid\">\n      <div\n        v-for=\"producto in productos\"\n        :key=\"producto.id_producto\"\n        class=\"producto-card\"\n      >\n        <div class=\"producto-descripcion\">\n          <h3>{{ producto.descripcion }}</h3>\n          <p>Precio: ${{ producto.precio_unitario }}</p>\n          <p>Stock: {{ producto.stock }}</p>\n        </div>\n        <div class=\"producto-acciones\">\n          <button @click=\"agregarCarrito(producto)\">Agregar al carrito</button>\n          <button @click=\"comprarAhora(producto)\">Comprar ahora</button>\n        </div>\n      </div>\n    </div>\n    <div v-else>\n      <p>No hay productos disponibles.</p>\n    </div>\n\n    <div v-if=\"carrito.length > 0\" class=\"carrito\">\n      <h3>Carrito de Compras</h3>\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"index\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }} x\n          {{ item.cantidad }}\n          <button @click=\"e