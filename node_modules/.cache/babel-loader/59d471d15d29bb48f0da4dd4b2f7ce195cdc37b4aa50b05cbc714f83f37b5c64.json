{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: 1,\n      productoSeleccionado: {},\n      isModalVisible: false\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      const itemEnCarrito = this.carrito.find(item => item.id_producto === producto.id_producto);\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({\n          ...producto,\n          cantidad: 1\n        });\n      }\n      this.actualizarTotal();\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.actualizarTotal();\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    mostrarModalCompra(producto) {\n      this.productoSeleccionado = producto;\n      this.isModalVisible = true;\n    },\n    async comprarAhora() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n      try {\n        const response = await axios.post(\"http://localhost:3001/api/auth/venta\", {\n          id_cliente: this.id_cliente,\n          productos: [{\n            id_producto: this.productoSeleccionado.id_producto,\n            cantidad: 1,\n            precio_unitario: parseFloat(this.productoSeleccionado.precio_unitario)\n          }],\n          total: parseFloat(this.productoSeleccionado.precio_unitario),\n          metodo_pago_id: this.metodo_pago_id\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Venta procesada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          this.isModalVisible = false;\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","data","productos","carrito","totalCarrito","id_cliente","metodo_pago_id","productoSeleccionado","isModalVisible","methods","fetchProductos","response","get","Array","isArray","console","error","agregarCarrito","producto","itemEnCarrito","find","item","id_producto","cantidad","push","actualizarTotal","eliminarDelCarrito","index","splice","reduce","total","precio_unitario","mostrarModalCompra","comprarAhora","token","localStorage","getItem","alert","post","parseFloat","headers","Authorization","message","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ProductosTienda.vue"],"sourcesContent":["<template>\n  <div class=\"productos-tienda\">\n    <!-- Productos -->\n    <div v-if=\"productos.length > 0\" class=\"productos-grid\">\n      <div\n        v-for=\"producto in productos\"\n        :key=\"producto.id_producto\"\n        class=\"producto-card\"\n      >\n        <div class=\"producto-descripcion\">\n          <h3>{{ producto.descripcion }}</h3>\n          <p>Precio: ${{ producto.precio_unitario }}</p>\n        </div>\n        <div class=\"producto-acciones\">\n          <button @click=\"agregarCarrito(producto)\">Agregar al carrito</button>\n          <button @click=\"mostrarModalCompra(producto)\">Comprar ahora</button>\n        </div>\n      </div>\n    </div>\n    <div v-else>\n      <p>No hay productos disponibles.</p>\n    </div>\n\n    <!-- Carrito de compras -->\n    <div v-if=\"carrito.length > 0\" class=\"carrito\">\n      <h3>Carrito de compras</h3>\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"index\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }} x\n          {{ item.cantidad }}\n          <button @click=\"eliminarDelCarrito(index)\">Eliminar</button>\n        </li>\n      </ul>\n      <p>Total: ${{ totalCarrito }}</p>\n      <button @click=\"procesarVenta\">Procesar venta</button>\n    </div>\n\n    <!-- Modal -->\n    <b-modal id=\"modalCompra\" v-model=\"isModalVisible\" title=\"Comprar ahora\">\n      <div class=\"modal-body\">\n        <h3>{{ productoSeleccionado.descripcion }}</h3>\n        <p>Precio: ${{ productoSeleccionado.precio_unitario }}</p>\n        <p>Total: ${{ productoSeleccionado.precio_unitario }}</p>\n        <label for=\"metodoPago\">Selecciona el método de pago:</label>\n        <b-form-select v-model=\"metodo_pago_id\" class=\"form-select\">\n          <b-form-select-option value=\"1\"\n            >Tarjeta de Credito</b-form-select-option\n          >\n          <b-form-select-option value=\"2\">Mercadopago</b-form-select-option>\n          <b-form-select-option value=\"3\">Rapipago</b-form-select-option>\n        </b-form-select>\n      </div>\n      <template #footer>\n        <b-button variant=\"secondary\" @click=\"isModalVisible = false\"\n          >Cancelar</b-button\n        >\n        <b-button variant=\"primary\" @click=\"comprarAhora\"\n          >Confirmar Compra</b-button\n        >\n      </template>\n    </b-modal>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: 1,\n      productoSeleccionado: {},\n      isModalVisible: false,\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      const itemEnCarrito = this.carrito.find(\n        (item) => item.id_producto === producto.id_producto\n      );\n\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({ ...producto, cantidad: 1 });\n      }\n\n      this.actualizarTotal();\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.actualizarTotal();\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    mostrarModalCompra(producto) {\n      this.productoSeleccionado = producto;\n      this.isModalVisible = true;\n    },\n    async comprarAhora() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n\n      try {\n        const response = await axios.post(\n          \"http://localhost:3001/api/auth/venta\",\n          {\n            id_cliente: this.id_cliente,\n            productos: [\n              {\n                id_producto: this.productoSeleccionado.id_producto,\n                cantidad: 1,\n                precio_unitario: parseFloat(\n                  this.productoSeleccionado.precio_unitario\n                ),\n              },\n            ],\n            total: parseFloat(this.productoSeleccionado.precio_unitario),\n            metodo_pago_id: this.metodo_pago_id,\n          },\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Venta procesada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          this.isModalVisible = false;\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-tienda {\n  padding: 20px;\n}\n\n.productos-grid {\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n}\n\n.producto-card {\n  border: 1px solid #ccc;\n  padding: 20px;\n  width: 200px;\n  text-align: center;\n  background-color: #f9f9f9;\n  border-radius: 8px;\n}\n\n.producto-descripcion h3 {\n  margin: 0;\n  font-size: 18px;\n}\n\n.producto-acciones {\n  margin-top: 10px;\n}\n\nbutton {\n  margin: 5px 0;\n  padding: 8px 16px;\n  background-color: #007bff;\n  color: white;\n  border: none;\n  border-radius: 4px;\n  cursor: pointer;\n}\n\nbutton:hover {\n  background-color: #0056b3;\n}\n\n.carrito {\n  position: fixed;\n  right: 20px;\n  top: 20px;\n  width: 300px;\n  background-color: #fff;\n  border: 1px solid #ccc;\n  padding: 20px;\n  border-radius: 8px;\n}\n\n.carrito ul {\n  list-style-type: none;\n  padding: 0;\n}\n\n.carrito li {\n  display: flex;\n  justify-content: space-between;\n  margin-bottom: 10px;\n}\n</style>\n"],"mappings":";AAiEA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,EAAE;MACXC,YAAY,EAAE,CAAC;MACfC,UAAU,EAAE,IAAI;MAChBC,cAAc,EAAE,CAAC;MACjBC,oBAAoB,EAAE,CAAC,CAAC;MACxBC,cAAc,EAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMX,KAAK,CAACY,GAAG,CAAC,+BAA+B,CAAC;QACjE,IAAIC,KAAK,CAACC,OAAO,CAACH,QAAQ,CAACV,IAAI,CAAC,EAAE;UAChC,IAAI,CAACC,SAAQ,GAAIS,QAAQ,CAACV,IAAI;QAChC,OAAO;UACLc,OAAO,CAACC,KAAK,CAAC,uBAAuB,EAAEL,QAAQ,CAACV,IAAI,CAAC;QACvD;MACF,EAAE,OAAOe,KAAK,EAAE;QACdD,OAAO,CAACC,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IACDC,cAAcA,CAACC,QAAQ,EAAE;MACvB,MAAMC,aAAY,GAAI,IAAI,CAAChB,OAAO,CAACiB,IAAI,CACpCC,IAAI,IAAKA,IAAI,CAACC,WAAU,KAAMJ,QAAQ,CAACI,WAC1C,CAAC;MAED,IAAIH,aAAa,EAAE;QACjBA,aAAa,CAACI,QAAQ,EAAE;MAC1B,OAAO;QACL,IAAI,CAACpB,OAAO,CAACqB,IAAI,CAAC;UAAE,GAAGN,QAAQ;UAAEK,QAAQ,EAAE;QAAE,CAAC,CAAC;MACjD;MAEA,IAAI,CAACE,eAAe,CAAC,CAAC;IACxB,CAAC;IACDC,kBAAkBA,CAACC,KAAK,EAAE;MACxB,IAAI,CAACxB,OAAO,CAACyB,MAAM,CAACD,KAAK,EAAE,CAAC,CAAC;MAC7B,IAAI,CAACF,eAAe,CAAC,CAAC;IACxB,CAAC;IACDA,eAAeA,CAAA,EAAG;MAChB,IAAI,CAACrB,YAAW,GAAI,IAAI,CAACD,OAAO,CAAC0B,MAAM,CAAC,CAACC,KAAK,EAAET,IAAI,KAAK;QACvD,OAAOS,KAAI,GAAIT,IAAI,CAACU,eAAc,GAAIV,IAAI,CAACE,QAAQ;MACrD,CAAC,EAAE,CAAC,CAAC;IACP,CAAC;IACDS,kBAAkBA,CAACd,QAAQ,EAAE;MAC3B,IAAI,CAACX,oBAAmB,GAAIW,QAAQ;MACpC,IAAI,CAACV,cAAa,GAAI,IAAI;IAC5B,CAAC;IACD,MAAMyB,YAAYA,CAAA,EAAG;MACnB,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;MAC3C,IAAI,CAAC/B,UAAS,GAAI8B,YAAY,CAACC,OAAO,CAAC,YAAY,CAAC;MAEpD,IAAI,CAACF,KAAK,EAAE;QACVG,KAAK,CAAC,0CAA0C,CAAC;QACjD;MACF;MAEA,IAAI,CAAC,IAAI,CAAChC,UAAU,EAAE;QACpBgC,KAAK,CAAC,8BAA8B,CAAC;QACrC;MACF;MAEA,IAAI;QACF,MAAM1B,QAAO,GAAI,MAAMX,KAAK,CAACsC,IAAI,CAC/B,sCAAsC,EACtC;UACEjC,UAAU,EAAE,IAAI,CAACA,UAAU;UAC3BH,SAAS,EAAE,CACT;YACEoB,WAAW,EAAE,IAAI,CAACf,oBAAoB,CAACe