d>\n            <td>\n              <button @click=\"verDetallesProducto(producto)\" class=\"btn-ver\">\n                Ver Detalles\n              </button>\n            </td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n    <!-- Modal para mostrar detalles del producto -->\n    <b-modal\n      id=\"modalDetallesProducto\"\n      title=\"Detalles del Producto\"\n      v-model=\"showModalDetalles\"\n    >\n      <p><strong>Código:</strong> {{ productoActual.codigo_producto }}</p>\n      <p><strong>Descripción:</strong> {{ productoActual.descripcion }}</p>\n      <p>\n        <strong>Precio Unitario:</strong> {{ productoActual.precio_unitario }}\n      </p>\n      <p><strong>Stock:</strong> {{ productoActual.stock }}</p>\n      <p>\n        <strong>Subcategoría:</strong> {{ productoActual.nombre_subcategoria }}\n      </p>\n      <b-button @click=\"showModalDetalles = false\">Cerrar</b-button>\n    </b-modal>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport { BModal, BButton } from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    BModal,\n    BButton,\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      productoActual: {}, // Objeto para almacenar el producto actual\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\n          \"http://localhost:3001/api/listaproductos\",\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto; // Almacena el producto seleccionado\n      this.showModalDetalles = true; // Muestra el modal\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-container {\n  padding: 20px;\n  background-color: #f4f4f4;\n}\n\n.productos-title {\n  text-align: center;\n  color: #333;\n  margin-bottom: 20px;\n}\n\n.table-container {\n  margin: 0 auto;\n  max-width: 100%;\n  overflow-x: auto;\n}\n\n.productos-table {\n  width: 100%;\n  border-collapse: collapse;\n}\n\n.productos-table th,\n.productos-table td {\n  padding: 12px;\n  border: 1px solid #ddd;\n}\n\n.productos-table th {\n  background-color: #0a641a;\n  color: #fff;\n}\n\n.productos-table td {\n  text-align: left;\n}\n\nbutton {\n  padding: 5px 10px;\n  margin: 2px;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  color: #fff;\n  font-size: 14px;\n}\n\n.btn-ver {\n  background-color: #3498db;\n}\n\n/* Media Queries para Responsividad */\n\n/* Pantallas hasta 768px de ancho */\n@media (max-width: 768px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 8px;\n    font-size: 14px;\n  }\n}\n\n/* Pantallas hasta 480px de ancho */\n@media (max-width: 480px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 6px;\n    font-size: 12px;\n  }\n}\n</style>\n"],"mappings":"AA+CA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,MAAM,EAAEC,OAAM,QAAS,iBAAiB;AAEjD,eAAe;EACbC,UAAU,EAAE;IACVF,MAAM;IACNC;EACF,CAAC;EACDE,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,iBAAiB,EAAE,KAAK;MACxBC,cAAc,EAAE,CAAC,CAAC,CAAE;IACtB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,QAAO,GAAI,MAAMb,KAAK,CAACc,GAAG,CAC9B,0CAA0C,EAC1C;UACEC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CACF,CAAC;QACD,IAAI,CAACL,SAAQ,GAAIQ,QAAQ,CAACT,IAAI;MAChC,EAAE,OAAOa,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IACDE,mBAAmBA,CAACC,QAAQ,EAAE;MAC5B,IAAI,CAACb,cAAa,GAAIa,QAAQ,EAAE;MAChC,IAAI,CAACd,iBAAgB,GAAI,IAAI,EAAE;IACjC;EACF,CAAC;EACDe,OAAOA,CAAA,EAAG;IACR,IAAI,CAACZ,cAAc,CAAC,CAAC;EACvB;AACF,CAA