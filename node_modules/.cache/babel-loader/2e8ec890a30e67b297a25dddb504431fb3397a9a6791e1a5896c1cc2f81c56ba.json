{"ast":null,"code":"import ProductosTienda from \"./ProductosTienda.vue\";\nimport MenuPrincipal from \"@/components/MenuPrincipal.vue\";\nimport CustomScroll from \"./CustomScroll.vue\";\nimport { BButton, BCollapse } from \"bootstrap-vue-3\";\nimport { vBToggle } from \"bootstrap-vue-3\";\nexport default {\n  components: {\n    ProductosTienda,\n    MenuPrincipal,\n    BButton,\n    CustomScroll,\n    BCollapse\n  },\n  directives: {\n    \"b-toggle\": vBToggle\n  },\n  data() {\n    return {\n      categoriaSeleccionada: \"\" // Estado para almacenar la categoría seleccionada\n    };\n  },\n  methods: {\n    seleccionarCategoria(categoria) {\n      this.categoriaSeleccionada = categoria; // Actualizar la categoría seleccionada\n    }\n  }\n};","map":{"version":3,"names":["ProductosTienda","MenuPrincipal","CustomScroll","BButton","BCollapse","vBToggle","components","directives","data","categoriaSeleccionada","methods","seleccionarCategoria","categoria"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\PaginaInicio.vue"],"sourcesContent":["<template>\n  <div class=\"page-container\">\n    <custom-scroll>\n      <MenuPrincipal />\n      <div class=\"content-container\">\n        <div class=\"sidebar-container\">\n          <b-button v-b-toggle.sidebar-collapse class=\"menu-toggle\">\n            <i class=\"fa-solid fa-bars\"></i>\n            <h8 class=\"h8\">Categorias</h8>\n          </b-button>\n\n          <b-collapse id=\"sidebar-collapse\" class=\"sidebar\">\n            <b-button class=\"close-btn\" v-b-toggle.sidebar-collapse>\n              <i class=\"fa-solid fa-times\"></i>\n            </b-button>\n\n            <section class=\"categorias\">\n              <h2>Categorías</h2>\n              <h5>Seleccione una categoría</h5>\n              <div class=\"categoria-list\">\n                <button class=\"button\" data-text=\"Ropa y Accesorios\">\n                  Ropa y Accesorios\n                </button>\n                <button class=\"button\" data-text=\"Ciclismo\">Ciclismo</button>\n                <button class=\"button\" data-text=\"Camping\">Camping</button>\n                <button class=\"button\" data-text=\"Caza\">Caza</button>\n              </div>\n            </section>\n            <img src=\"@/assets/logo.png\" alt=\"Logo\" class=\"logo\" />\n          </b-collapse>\n        </div>\n        <ProductosTienda :categoria-seleccionada=\"categoriaSeleccionada\" />\n      </div>\n    </custom-scroll>\n  </div>\n</template>\n\n<script>\nimport ProductosTienda from \"./ProductosTienda.vue\";\nimport MenuPrincipal from \"@/components/MenuPrincipal.vue\";\nimport CustomScroll from \"./CustomScroll.vue\";\n\nimport { BButton, BCollapse } from \"bootstrap-vue-3\";\nimport { vBToggle } from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    ProductosTienda,\n    MenuPrincipal,\n    BButton,\n    CustomScroll,\n    BCollapse,\n  },\n  directives: {\n    \"b-toggle\": vBToggle,\n  },\n  data() {\n    return {\n      categoriaSeleccionada: \"\", // Estado para almacenar la categoría seleccionada\n    };\n  },\n  methods: {\n    seleccionarCategoria(categoria) {\n      this.categoriaSeleccionada = categoria; // Actualizar la categoría seleccionada\n    },\n  },\n};\n</script>\n\n<style scoped>\n.page-container {\n  display: flex;\n  flex-direction: column;\n  min-height: 100vh;\n}\n\n.custom-scroll {\n  flex: 1; /* Ocupa todo el espacio disponible */\n}\n\n.content-container {\n  display: flex;\n  flex: 1;\n  margin-left: 60px; /* Deja espacio para el botón */\n  margin-top: 60px; /* Para asegurarse de que el contenido no quede oculto detrás del botón fijo */\n}\n\n.sidebar-container {\n  position: relative;\n}\n\n.menu-toggle {\n  background-color: #0a641a;\n  color: #ff9800;\n  border: transparent;\n  position: fixed; /* Fijo para que no se desplace con el contenido */\n  left: 15px; /* Alineado a la izquierda */\n  top: 15px; /* Alineado arriba */\n  z-index: 100;\n  padding: 10px; /* Espacio alrededor del icono */\n}\n\n.h8 {\n  margin-left: 6px;\n  color: #fff;\n}\n\n.logo {\n  margin-top: 20px; /* Ajusta el margen superior para la visualización en dispositivos móviles */\n  width: 150px; /* Ajusta el tamaño de la imagen */\n  cursor: pointer;\n}\n\n.sidebar {\n  position: fixed;\n  top: 0;\n  left: 0;\n  height: 100%;\n  width: 250px; /* Ancho ajustado para dispositivos móviles */\n  color: white;\n  background-color: #0a641a;\n  transform: translateX(-100%);\n  box-shadow: -4px 0 6px rgba(0, 0, 0, 0.1);\n  transition: transform 0.3s ease;\n  z-index: 999;\n}\n\n.sidebar.show {\n  transform: translateX(0);\n}\n\n.close-btn {\n  position: absolute;\n  top: 10px;\n  right: 10px;\n  z-index: 1001;\n  background-color: transparent;\n  border: none;\n  font-size: 24px;\n  color: #ff9800;\n}\n\n.close-btn:hover {\n  background-color: #0a641a;\n  color: #ff9800;\n}\n\n.categorias {\n  padding: 20px;\n  text-align: center;\n}\n\n.categoria-list {\n  display: flex;\n  flex-direction: column;\n  gap: 15px; /* Ajuste de espaciado para dispositivos móviles */\n}\n\n.button {\n  cursor: pointer;\n  position: relative;\n  padding: 10px 20px; /* Ajusta el padding para el tamaño de los botones */\n  font-size: 16px; /* Tamaño de fuente más pequeño para dispositivos móviles */\n  color: #ff9800; /* Color naranja personalizado */\n  border: 2px solid #ff9800; /* Borde naranja */\n  border-radius: 34px;\n  background-color: transparent;\n  font-weight: 600;\n  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);\n  overflow: hidden;\n}\n\n.button::before {\n  content: \"\";\n  position: absolute;\n  inset: 0;\n  margin: auto;\n  width: 90px; /* Ajuste del ancho */\n  height: 40px; /* Ajuste del alto */\n  border-radius: inherit;\n  scale: 0;\n  z-index: -1;\n  background-color: #ff9800; /* Color verde al hacer hover */\n  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);\n}\n\n.button:hover::before {\n  scale: 3;\n}\n\n.button:hover {\n  color: #0a641a; /* Color verde en el hover */\n  scale: 1.1;\n  box-shadow: 0 0px 20px rgba(10, 100, 26, 0.4); /* Sombras del verde en el hover */\n}\n\n.button:active {\n  scale: 1;\n}\n\n/* Responsivo */\n@media (max-width: 768px) {\n  .content-container {\n    margin-left: 0; /* Elimina el margen en dispositivos móviles */\n    margin-top: 0; /* Elimina el margen superior en dispositivos móviles */\n  }\n\n  .sidebar {\n    width: 100%; /* El sidebar ocupa todo el ancho en dispositivos móviles */\n  }\n\n  .menu-toggle {\n    left: 10px;\n    top: 10px;\n  }\n\n  .logo {\n    width: 120px; /* Ajusta el tamaño de la imagen */\n    margin-top: 20px;\n  }\n\n  .categoria-list {\n    gap: 10px; /* Reduce el espaciado en dispositivos móviles */\n  }\n\n  .button {\n    padding: 8px 16px; /* Ajusta el padding para botones más pequeños */\n    font-size: 14px; /* Tamaño de fuente más pequeño en dispositivos móviles */\n  }\n\n  .button::before {\n    width: 80px; /* Ajuste del ancho */\n    height: 35px; /* Ajuste del alto */\n  }\n}\n</style>\n"],"mappings":"AAsCA,OAAOA,eAAc,MAAO,uBAAuB;AACnD,OAAOC,aAAY,MAAO,gCAAgC;AAC1D,OAAOC,YAAW,MAAO,oBAAoB;AAE7C,SAASC,OAAO,EAAEC,SAAQ,QAAS,iBAAiB;AACpD,SAASC,QAAO,QAAS,iBAAiB;AAE1C,eAAe;EACbC,UAAU,EAAE;IACVN,eAAe;IACfC,aAAa;IACbE,OAAO;IACPD,YAAY;IACZE;EACF,CAAC;EACDG,UAAU,EAAE;IACV,UAAU,EAAEF;EACd,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,qBAAqB,EAAE,EAAE,CAAE;IAC7B,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,oBAAoBA,CAACC,SAAS,EAAE;MAC9B,IAAI,CAACH,qBAAoB,GAAIG,SAAS,EAAE;IAC1C;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}