itoRect.top;\n\n      e.preventDefault(); // Evita la selección de texto durante el arrastre\n    },\n    onDrag(e) {\n      if (this.isDragging) {\n        const x = e.clientX - this.carritoOffsetX;\n        const y = e.clientY - this.carritoOffsetY;\n        this.$refs.carrito.style.left = `${x}px`;\n        this.$refs.carrito.style.top = `${y}px`;\n        e.preventDefault(); // Evita la selección de texto durante el arrastre\n      }\n    },\n    stopDrag() {\n      this.isDragging = false;\n    },\n    toggleMinimizar() {\n      this.minimizado = !this.minimizado;\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-tienda {\n  padding: 20px;\n  background-color: #f5f5f5;\n  position: relative;\n}\n\n.productos-grid {\n  font-weight: bold;\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n  justify-content: center;\n}\n\n.producto-card {\n  border: 1px solid #ddd;\n  padding: 20px;\n  width: 250px;\n  text-align: center;\n  background-color: #fff;\n  border-radius: 10px;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  transition: transform 0.2s;\n  position: relative;\n}\n\n.producto-card:hover {\n  transform: scale(1.05);\n}\n\n.producto-descripcion h3 {\n  font-weight: bold;\n  margin: 0;\n  font-size: 20px;\n  color: #333;\n}\n\n.producto-descripcion p {\n  font-size: 18px;\n  color: #555;\n}\n\n.producto-acciones {\n  margin-top: 15px;\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.producto-acciones button {\n  margin: 5px;\n  padding: 10px 20px;\n  background-color: #0a641a;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  font-weight: bold;\n  transition: background-color 0.3s;\n  display: flex;\n  align-items: center;\n}\n\n.producto-acciones button:hover {\n  background-color: #09831f;\n}\n\n.icono-caja {\n  color: #f1c40f;\n  font-size: 55px;\n}\n\n.carrito {\n  font-weight: bold;\n  position: fixed;\n  right: 20px;\n  top: 20px;\n  width: 350px;\n  background-color: #fff;\n  border: 1px solid #ccc;\n  padding: 20px;\n  border-radius: 8px;\n  overflow-y: auto;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  cursor: move; /* Cursor de arrastre */\n}\n.carrito h3 {\n  font-weight: bold;\n}\n.carrito ul {\n  list-style-type: none;\n  padding: 0;\n  margin: 0;\n}\n\n.carrito li {\n  display: flex;\n  justify-content: space-between;\n  margin-bottom: 15px;\n  font-size: 16px;\n}\n\n.carrito.minimizado {\n  transform: translateX(0);\n}\n\n.carrito .header-carrito {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  cursor: pointer;\n}\n\n.carrito .header-carrito h3 {\n  margin: 0;\n}\n\n.carrito .btn-minimizar {\n  background: none;\n  border: none;\n  font-size: 1.5em;\n  cursor: pointer;\n}\n\n.btn-agregar {\n  background-color: #28a745;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 10px 20px;\n  cursor: pointer;\n  transition: background-color 0.3s;\n}\n\n.btn-agregar:hover {\n  background-color: #218838;\n}\n\n.btn-procesar {\n  background-color: #007bff;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 10px 20px;\n  cursor: pointer;\n  font-weight: bold;\n  transition: background-color 0.3s;\n}\n\n.btn-procesar:hover {\n  background-color: #0056b3;\n}\n\n.btn-eliminar {\n  background-color: #dc3545;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 5px 10px;\n  cursor: pointer;\n  font-weight: bold;\n}\n\n.btn-eliminar:hover {\n  background-color: #c82333;\n}\n\n</style>"],"mappings":";;;EAUSA,KAAK,EAAC;AAAgB;;EAV/BC,GAAA;AAAA;;EAAAA,GAAA;AAAA;mBAAA;;;;uBACEC,mBAAA,CAwCM;IAvCJF,KAAK,EAFTG,eAAA,EAEU,SAAS;MAAAC,UAAA,EAKmBC,KAAA,CAAAD;IAAU;IAJ5CE,GAAG,EAAC,SAAS;IACZC,WAAS,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAC,SAAA,IAAAD,QAAA,CAAAC,SAAA,IAAAF,IAAA,CAAS;IACpBG,WAAS,EAAAJ,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAG,MAAA,IAAAH,QAAA,CAAAG,MAAA,IAAAJ,IAAA,CAAM;IACjBK,SAAO,EAAAN,MAAA,QAAAA,MAAA,