{"ast":null,"code":"import axios from \"axios\";\nimport { BModal, BButton, BFormGroup, BFormInput, BFormSelect } from \"bootstrap-vue-3\";\nexport default {\n  components: {\n    BModal,\n    BButton,\n    BFormGroup,\n    BFormInput,\n    BFormSelect\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      showModalEditar: false,\n      showModalEliminar: false,\n      productoActual: {},\n      productoAEliminar: {},\n      subcategorias: [] // Opcional: lista de subcategorías para el formulario de edición\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\"http://localhost:3001/api/listaproductos\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto;\n      this.showModalDetalles = true;\n    },\n    abrirModalEditar(producto) {\n      this.productoActual = {\n        ...producto\n      }; // Copia del producto para edición\n      this.showModalEditar = true;\n    },\n    async editarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.put(`http://localhost:3001/api/productos/${this.productoActual.id_producto}`, this.productoActual, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEditar = false;\n      } catch (error) {\n        console.error(\"Error al editar el producto:\", error);\n      }\n    },\n    abrirModalEliminar(producto) {\n      this.productoAEliminar = producto;\n      this.showModalEliminar = true;\n    },\n    async eliminarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.delete(`http://localhost:3001/api/productos/${this.productoAEliminar.id_producto}`, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEliminar = false;\n      } catch (error) {\n        console.error(\"Error al eliminar el producto:\", error);\n      }\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","BModal","BButton","BFormGroup","BFormInput","BFormSelect","components","data","productos","showModalDetalles","showModalEditar","showModalEliminar","productoActual","productoAEliminar","subcategorias","methods","fetchProductos","token","localStorage","getItem","response","get","headers","Authorization","error","console","verDetallesProducto","producto","abrirModalEditar","editarProducto","put","id_producto","abrirModalEliminar","eliminarProducto","delete","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ListaProductos.vue"],"sourcesContent":["<template>\n  <div class=\"productos-container\">\n    <h1 class=\"productos-title\">Lista de Productos</h1>\n    <div class=\"table-container\">\n      <table class=\"productos-table\">\n        <thead>\n          <tr>\n            <th>Descripción</th>\n            <th>Stock</th>\n            <th>Acciones</th>\n          </tr>\n        </thead>\n        <tbody>\n          <tr v-for=\"producto in productos\" :key=\"producto.id_producto\">\n            <td>{{ producto.descripcion }}</td>\n            <td>{{ producto.stock }}</td>\n            <td>\n              <button @click=\"verDetallesProducto(producto)\" class=\"btn-ver\">\n                Ver Detalles\n              </button>\n              <button @click=\"abrirModalEditar(producto)\" class=\"btn-editar\">\n                Editar\n              </button>\n              <button @click=\"abrirModalEliminar(producto)\" class=\"btn-eliminar\">\n                Eliminar\n              </button>\n            </td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n\n    <!-- Modal para mostrar detalles del producto -->\n    <b-modal\n      id=\"modalDetallesProducto\"\n      title=\"Detalles del Producto\"\n      v-model=\"showModalDetalles\"\n    >\n      <p><strong>Código:</strong> {{ productoActual.codigo_producto }}</p>\n      <p><strong>Descripción:</strong> {{ productoActual.descripcion }}</p>\n      <p><strong>Precio Unitario:</strong> {{ productoActual.precio_unitario }}</p>\n      <p><strong>Stock:</strong> {{ productoActual.stock }}</p>\n      <p><strong>Subcategoría:</strong> {{ productoActual.nombre_subcategoria }}</p>\n      <b-button @click=\"showModalDetalles = false\">Cerrar</b-button>\n    </b-modal>\n\n    <!-- Modal para editar producto -->\n    <b-modal\n      id=\"modalEditarProducto\"\n      title=\"Editar Producto\"\n      v-model=\"showModalEditar\"\n      @ok=\"editarProducto\"\n    >\n      <form @submit.prevent=\"editarProducto\">\n        <b-form-group label=\"Código\">\n          <b-form-input v-model=\"productoActual.codigo_producto\" required></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Descripción\">\n          <b-form-input v-model=\"productoActual.descripcion\" required></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Precio Unitario\">\n          <b-form-input type=\"number\" v-model=\"productoActual.precio_unitario\" required></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Stock\">\n          <b-form-input type=\"number\" v-model=\"productoActual.stock\" required></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Subcategoría\">\n          <b-form-select v-model=\"productoActual.id_subcategoria\" :options=\"subcategorias\" required></b-form-select>\n        </b-form-group>\n      </form>\n    </b-modal>\n\n    <!-- Modal de confirmación de eliminación -->\n    <b-modal\n      id=\"modalEliminarProducto\"\n      title=\"Eliminar Producto\"\n      v-model=\"showModalEliminar\"\n      @ok=\"eliminarProducto\"\n    >\n      <p>¿Estás seguro de que deseas eliminar el producto \"{{ productoAEliminar.descripcion }}\"?</p>\n    </b-modal>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport { BModal, BButton, BFormGroup, BFormInput, BFormSelect } from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    BModal,\n    BButton,\n    BFormGroup,\n    BFormInput,\n    BFormSelect,\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      showModalEditar: false,\n      showModalEliminar: false,\n      productoActual: {},\n      productoAEliminar: {},\n      subcategorias: [], // Opcional: lista de subcategorías para el formulario de edición\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\"http://localhost:3001/api/listaproductos\", {\n          headers: {\n            Authorization: `Bearer ${token}`,\n          },\n        });\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto;\n      this.showModalDetalles = true;\n    },\n    abrirModalEditar(producto) {\n      this.productoActual = { ...producto }; // Copia del producto para edición\n      this.showModalEditar = true;\n    },\n    async editarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.put(`http://localhost:3001/api/productos/${this.productoActual.id_producto}`, this.productoActual, {\n          headers: {\n            Authorization: `Bearer ${token}`,\n          },\n        });\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEditar = false;\n      } catch (error) {\n        console.error(\"Error al editar el producto:\", error);\n      }\n    },\n    abrirModalEliminar(producto) {\n      this.productoAEliminar = producto;\n      this.showModalEliminar = true;\n    },\n    async eliminarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.delete(`http://localhost:3001/api/productos/${this.productoAEliminar.id_producto}`, {\n          headers: {\n            Authorization: `Bearer ${token}`,\n          },\n        });\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEliminar = false;\n      } catch (error) {\n        console.error(\"Error al eliminar el producto:\", error);\n      }\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-container {\n  padding: 20px;\n  background-color: #f4f4f4;\n}\n\n.productos-title {\n  text-align: center;\n  color: #333;\n  margin-bottom: 20px;\n}\n\n.table-container {\n  margin: 0 auto;\n  max-width: 100%;\n  overflow-x: auto;\n}\n\n.productos-table {\n  width: 100%;\n  border-collapse: collapse;\n}\n\n.productos-table th,\n.productos-table td {\n  padding: 12px;\n  border: 1px solid #ddd;\n}\n\n.productos-table th {\n  background-color: #0a641a;\n  color: #fff;\n}\n\n.productos-table td {\n  text-align: left;\n}\n\nbutton {\n  padding: 5px 10px;\n  margin: 2px;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  color: #fff;\n  font-size: 14px;\n}\n\n.btn-ver {\n  background-color: #3498db;\n}\n\n.btn-editar {\n  background-color: #f39c12;\n}\n\n.btn-eliminar {\n  background-color: #e74c3c;\n}\n\n/* Media Queries para Responsividad */\n\n/* Pantallas hasta 768px de ancho */\n@media (max-width: 768px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 8px;\n    font-size: 14px;\n  }\n}\n\n/* Pantallas hasta 480px de ancho */\n@media (max-width: 480px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 6px;\n    font-size: 12px;\n  }\n}\n</style>\n"],"mappings":"AAqFA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,MAAM,EAAEC,OAAO,EAAEC,UAAU,EAAEC,UAAU,EAAEC,WAAU,QAAS,iBAAiB;AAEtF,eAAe;EACbC,UAAU,EAAE;IACVL,MAAM;IACNC,OAAO;IACPC,UAAU;IACVC,UAAU;IACVC;EACF,CAAC;EACDE,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,iBAAiB,EAAE,KAAK;MACxBC,eAAe,EAAE,KAAK;MACtBC,iBAAiB,EAAE,KAAK;MACxBC,cAAc,EAAE,CAAC,CAAC;MAClBC,iBAAiB,EAAE,CAAC,CAAC;MACrBC,aAAa,EAAE,EAAE,CAAE;IACrB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,QAAO,GAAI,MAAMpB,KAAK,CAACqB,GAAG,CAAC,0CAA0C,EAAE;UAC3EC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CAAC,CAAC;QACF,IAAI,CAACT,SAAQ,GAAIY,QAAQ,CAACb,IAAI;MAChC,EAAE,OAAOiB,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IACDE,mBAAmBA,CAACC,QAAQ,EAAE;MAC5B,IAAI,CAACf,cAAa,GAAIe,QAAQ;MAC9B,IAAI,CAAClB,iBAAgB,GAAI,IAAI;IAC/B,CAAC;IACDmB,gBAAgBA,CAACD,QAAQ,EAAE;MACzB,IAAI,CAACf,cAAa,GAAI;QAAE,GAAGe;MAAS,CAAC,EAAE;MACvC,IAAI,CAACjB,eAAc,GAAI,IAAI;IAC7B,CAAC;IACD,MAAMmB,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMZ,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMnB,KAAK,CAAC8B,GAAG,CAAC,uCAAuC,IAAI,CAAClB,cAAc,CAACmB,WAAW,EAAE,EAAE,IAAI,CAACnB,cAAc,EAAE;UAC7GU,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CAAC,CAAC;QACF,IAAI,CAACD,cAAc,CAAC,CAAC,EAAE;QACvB,IAAI,CAACN,eAAc,GAAI,KAAK;MAC9B,EAAE,OAAOc,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,8BAA8B,EAAEA,KAAK,CAAC;MACtD;IACF,CAAC;IACDQ,kBAAkBA,CAACL,QAAQ,EAAE;MAC3B,IAAI,CAACd,iBAAgB,GAAIc,QAAQ;MACjC,IAAI,CAAChB,iBAAgB,GAAI,IAAI;IAC/B,CAAC;IACD,MAAMsB,gBAAgBA,CAAA,EAAG;MACvB,IAAI;QACF,MAAMhB,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMnB,KAAK,CAACkC,MAAM,CAAC,uCAAuC,IAAI,CAACrB,iBAAiB,CAACkB,WAAW,EAAE,EAAE;UAC9FT,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CAAC,CAAC;QACF,IAAI,CAACD,cAAc,CAAC,CAAC,EAAE;QACvB,