{"ast":null,"code":"import axios from \"axios\";\nimport { BModal, BButton } from \"bootstrap-vue-3\";\nexport default {\n  components: {\n    BModal,\n    BButton\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      showModalEditar: false,\n      showModalEliminar: false,\n      productoActual: {},\n      productoEditar: {},\n      productoAEliminar: {}\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\"http://localhost:3001/api/listaproductos\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto;\n      this.showModalDetalles = true;\n    },\n    editarProducto(producto) {\n      this.productoEditar = {\n        ...producto\n      }; // Copia el producto para editarlo\n      this.showModalEditar = true;\n    },\n    async actualizarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.put(`http://localhost:3001/api/productos/${this.productoEditar.id_producto}`, this.productoEditar, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Producto actualizado exitosamente\") {\n          alert(\"Producto actualizado exitosamente.\");\n          this.fetchProductos();\n          this.showModalEditar = false;\n        } else {\n          alert(\"Error al actualizar el producto.\");\n        }\n      } catch (error) {\n        console.error(\"Error al actualizar el producto:\", error);\n        alert(\"Error al actualizar el producto.\");\n      }\n    },\n    confirmarEliminacion(producto) {\n      this.productoAEliminar = producto;\n      this.showModalEliminar = true;\n    },\n    async eliminarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.delete(`http://localhost:3001/api/productos/${this.productoAEliminar.id_producto}`, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Producto eliminado exitosamente\") {\n          alert(\"Producto eliminado exitosamente.\");\n          this.fetchProductos();\n        } else {\n          alert(\"Error al eliminar el producto.\");\n        }\n      } catch (error) {\n        console.error(\"Error al eliminar el producto:\", error);\n        alert(\"Error al eliminar el producto.\");\n      }\n      this.showModalEliminar = false;\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","BModal","BButton","components","data","productos","showModalDetalles","showModalEditar","showModalEliminar","productoActual","productoEditar","productoAEliminar","methods","fetchProductos","token","localStorage","getItem","response","get","headers","Authorization","error","console","verDetallesProducto","producto","editarProducto","actualizarProducto","put","id_producto","message","alert","confirmarEliminacion","eliminarProducto","delete","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ListaProductos.vue"],"sourcesContent":["<template>\n  <div class=\"productos-container\">\n    <h1 class=\"productos-title\">Lista de Productos</h1>\n    <div class=\"table-container\">\n      <table class=\"productos-table\">\n        <thead>\n          <tr>\n            <th>Descripción</th>\n            <th>Stock</th>\n            <th>Acciones</th>\n          </tr>\n        </thead>\n        <tbody>\n          <tr v-for=\"producto in productos\" :key=\"producto.id_producto\">\n            <td>{{ producto.descripcion }}</td>\n            <td>{{ producto.stock }}</td>\n            <td>\n              <button @click=\"verDetallesProducto(producto)\" class=\"btn-ver\">\n                Ver Detalles\n              </button>\n              <button @click=\"editarProducto(producto)\" class=\"btn-editar\">\n                Editar\n              </button>\n              <button @click=\"confirmarEliminacion(producto)\" class=\"btn-eliminar\">\n                Eliminar\n              </button>\n            </td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n    \n    <!-- Modal para mostrar detalles del producto -->\n    <b-modal\n      id=\"modalDetallesProducto\"\n      title=\"Detalles del Producto\"\n      v-model=\"showModalDetalles\"\n    >\n      <p><strong>Código:</strong> {{ productoActual.codigo_producto }}</p>\n      <p><strong>Descripción:</strong> {{ productoActual.descripcion }}</p>\n      <p><strong>Precio Unitario:</strong> {{ productoActual.precio_unitario }}</p>\n      <p><strong>Stock:</strong> {{ productoActual.stock }}</p>\n      <p><strong>Subcategoría:</strong> {{ productoActual.nombre_subcategoria }}</p>\n      <b-button @click=\"showModalDetalles = false\">Cerrar</b-button>\n    </b-modal>\n\n    <!-- Modal para editar producto -->\n    <b-modal\n      id=\"modalEditarProducto\"\n      title=\"Editar Producto\"\n      v-model=\"showModalEditar\"\n    >\n      <form @submit.prevent=\"actualizarProducto\">\n        <div class=\"form-group\">\n          <label for=\"codigo_producto\">Código:</label>\n          <input\n            v-model=\"productoEditar.codigo_producto\"\n            type=\"text\"\n            id=\"codigo_producto\"\n            class=\"form-control\"\n            required\n          />\n        </div>\n        <div class=\"form-group\">\n          <label for=\"descripcion\">Descripción:</label>\n          <input\n            v-model=\"productoEditar.descripcion\"\n            type=\"text\"\n            id=\"descripcion\"\n            class=\"form-control\"\n            required\n          />\n        </div>\n        <div class=\"form-group\">\n          <label for=\"precio_unitario\">Precio Unitario:</label>\n          <input\n            v-model=\"productoEditar.precio_unitario\"\n            type=\"number\"\n            id=\"precio_unitario\"\n            class=\"form-control\"\n            step=\"0.01\"\n            required\n          />\n        </div>\n        <div class=\"form-group\">\n          <label for=\"stock\">Stock:</label>\n          <input\n            v-model=\"productoEditar.stock\"\n            type=\"number\"\n            id=\"stock\"\n            class=\"form-control\"\n            required\n          />\n        </div>\n        <div class=\"form-group\">\n          <label for=\"id_subcategoria\">Subcategoría:</label>\n          <input\n            v-model=\"productoEditar.id_subcategoria\"\n            type=\"text\"\n            id=\"id_subcategoria\"\n            class=\"form-control\"\n            required\n          />\n        </div>\n        <b-button type=\"submit\" class=\"btn-guardar\">\n          Guardar Cambios\n        </b-button>\n        <b-button @click=\"showModalEditar = false\" class=\"btn-cerrar\">\n          Cancelar\n        </b-button>\n      </form>\n    </b-modal>\n\n    <!-- Modal de confirmación de eliminación -->\n    <b-modal\n      id=\"modalEliminarProducto\"\n      title=\"Confirmación de Eliminación\"\n      v-model=\"showModalEliminar\"\n      ok-title=\"Eliminar\"\n      @ok=\"eliminarProducto\"\n    >\n      <p>¿Estás seguro de que deseas eliminar el producto {{ productoAEliminar.descripcion }}?</p>\n    </b-modal>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport { BModal, BButton } from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    BModal,\n    BButton,\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      showModalEditar: false,\n      showModalEliminar: false,\n      productoActual: {},\n      productoEditar: {},\n      productoAEliminar: {},\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\n          \"http://localhost:3001/api/listaproductos\",\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto;\n      this.showModalDetalles = true;\n    },\n    editarProducto(producto) {\n      this.productoEditar = { ...producto }; // Copia el producto para editarlo\n      this.showModalEditar = true;\n    },\n    async actualizarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.put(\n          `http://localhost:3001/api/productos/${this.productoEditar.id_producto}`,\n          this.productoEditar,\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        if (response.data.message === \"Producto actualizado exitosamente\") {\n          alert(\"Producto actualizado exitosamente.\");\n          this.fetchProductos();\n          this.showModalEditar = false;\n        } else {\n          alert(\"Error al actualizar el producto.\");\n        }\n      } catch (error) {\n        console.error(\"Error al actualizar el producto:\", error);\n        alert(\"Error al actualizar el producto.\");\n      }\n    },\n    confirmarEliminacion(producto) {\n      this.productoAEliminar = producto;\n      this.showModalEliminar = true;\n    },\n    async eliminarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.delete(\n          `http://localhost:3001/api/productos/${this.productoAEliminar.id_producto}`,\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        if (response.data.message === \"Producto eliminado exitosamente\") {\n          alert(\"Producto eliminado exitosamente.\");\n          this.fetchProductos();\n        } else {\n          alert(\"Error al eliminar el producto.\");\n        }\n      } catch (error) {\n        console.error(\"Error al eliminar el producto:\", error);\n        alert(\"Error al eliminar el producto.\");\n      }\n      this.showModalEliminar = false;\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-container {\n  padding: 20px;\n  background-color: #f4f4f4;\n}\n\n.productos-title {\n  text-align: center;\n  color: #333;\n  margin-bottom: 20px;\n}\n\n.table-container {\n  margin: 0 auto;\n  max-width: 100%;\n  overflow-x: auto;\n}\n\n.productos-table {\n  width: 100%;\n  border-collapse: collapse;\n}\n\n.productos-table th,\n.productos-table td {\n  padding: 12px;\n  border: 1px solid #ddd;\n}\n\n.productos-table th {\n  background-color: #0a641a;\n  color: #fff;\n}\n\n.productos-table td {\n  text-align: left;\n}\n\nbutton {\n  padding: 5px 10px;\n  margin: 2px;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  color: #fff;\n  font-size: 14px;\n}\n\n.btn-ver {\n  background-color: #3498db;\n}\n\n.btn-editar {\n  background-color: #f39c12;\n}\n\n.btn-eliminar {\n  background-color: #e74c3c;\n}\n\n.btn-guardar {\n  background-color: #0a641a;\n  color: #fff;\n  margin-right: 10px;\n}\n\n.btn-cerrar {\n  background-color: #ccc;\n  color: #000;\n}\n\n@media (max-width: 768px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 8px;\n    font-size: 14px;\n  }\n}\n\n@media (max-width: 480px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 6px;\n    font-size: 12px;\n  }\n}