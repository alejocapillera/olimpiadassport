{"ast":null,"code":"import MenuPrincipal from \"@/components/MenuPrincipal.vue\";\nimport CustomScroll from \"./CustomScroll.vue\";\nimport axios from \"axios\";\nexport default {\n  components: {\n    MenuPrincipal,\n    CustomScroll\n  },\n  data() {\n    return {\n      ventas: []\n    };\n  },\n  methods: {\n    async fetchCompras() {\n      const token = localStorage.getItem(\"token\");\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/auth/compras\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          },\n          params: {\n            id_cliente: localStorage.getItem(\"id_cliente\")\n          }\n        });\n        this.ventas = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener las compras:\", error);\n        alert(\"Error al obtener las compras.\");\n      }\n    },\n    async cancelarCompra(id_pedido) {\n      const confirmacion = confirm(\"¿Estás seguro de que deseas cancelar esta compra?\");\n      if (!confirmacion) return;\n      const token = localStorage.getItem(\"token\");\n      if (!token) {\n        alert(\"No se puede cancelar la compra. Datos de sesión faltantes.\");\n        return;\n      }\n      try {\n        await axios.delete(`http://localhost:3001/api/pedidos/${id_pedido}`, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        alert(\"Compra cancelada exitosamente.\");\n        this.fetchCompras(); // Actualizar la lista de compras después de la cancelación\n      } catch (error) {\n        console.error(\"Error al cancelar la compra:\", error);\n        alert(`Error al cancelar la compra: ${error.response ? error.response.data.error : error.message}`);\n      }\n    },\n    getClassEstado(id_estado) {\n      switch (id_estado) {\n        case 1:\n          return \"estado-pendiente\";\n        case 2:\n          return \"estado-enviado\";\n        case 3:\n          return \"estado-entregado\";\n        case 4:\n          return \"estado-anulado\";\n        default:\n          return \"\";\n      }\n    }\n  },\n  mounted() {\n    this.fetchCompras();\n  }\n};","map":{"version":3,"names":["MenuPrincipal","CustomScroll","axios","components","data","ventas","methods","fetchCompras","token","localStorage","getItem","alert","response","get","headers","Authorization","params","id_cliente","error","console","cancelarCompra","id_pedido","confirmacion","confirm","delete","message","getClassEstado","id_estado","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\MisCompras.vue"],"sourcesContent":["<template>\n  <custom-scroll>\n    <MenuPrincipal />\n    <div class=\"mis-compras\">\n      <h1>Mis Compras</h1>\n      <div v-if=\"ventas.length > 0\">\n        <ul>\n          <li\n            v-for=\"venta in ventas\"\n            :key=\"venta.id_venta\"\n            :class=\"getClassEstado(venta.id_estado)\"\n          >\n            <p>\n              <span>Compra número: {{ venta.id_venta }}</span>\n            </p>\n            <p>\n              <span>Fecha: {{ venta.fecha_venta }}</span>\n            </p>\n            <p>\n              <span>Monto Total: ${{ venta.monto_total }}</span>\n            </p>\n            <p>\n              <span>Estado: {{ venta.estado_nombre }}</span>\n            </p>\n            <!-- Botón para cancelar pedido, oculto si el estado es 'anulado' -->\n            <button\n              v-if=\"venta.id_estado !== 4\"\n              @click=\"cancelarCompra(venta.id_pedido)\"\n              class=\"btn-cancelar\"\n            >\n              Cancelar Pedido\n            </button>\n          </li>\n        </ul>\n      </div>\n      <div v-else>\n        <p>No tienes compras registradas.</p>\n      </div>\n    </div>\n  </custom-scroll>\n</template>\n\n<script>\nimport MenuPrincipal from \"@/components/MenuPrincipal.vue\";\nimport CustomScroll from \"./CustomScroll.vue\";\nimport axios from \"axios\";\n\nexport default {\n  components: {\n    MenuPrincipal,\n    CustomScroll,\n  },\n  data() {\n    return {\n      ventas: [],\n    };\n  },\n  methods: {\n    async fetchCompras() {\n      const token = localStorage.getItem(\"token\");\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n\n      try {\n        const response = await axios.get(\n          \"http://localhost:3001/api/auth/compras\",\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n            params: {\n              id_cliente: localStorage.getItem(\"id_cliente\")\n            }\n          }\n        );\n        this.ventas = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener las compras:\", error);\n        alert(\"Error al obtener las compras.\");\n      }\n    },\n    async cancelarCompra(id_pedido) {\n      const confirmacion = confirm(\"¿Estás seguro de que deseas cancelar esta compra?\");\n      if (!confirmacion) return;\n\n      const token = localStorage.getItem(\"token\");\n\n      if (!token) {\n        alert(\"No se puede cancelar la compra. Datos de sesión faltantes.\");\n        return;\n      }\n\n      try {\n        await axios.delete(`http://localhost:3001/api/pedidos/${id_pedido}`, {\n          headers: {\n            Authorization: `Bearer ${token}`,\n          },\n        });\n        alert(\"Compra cancelada exitosamente.\");\n        this.fetchCompras(); // Actualizar la lista de compras después de la cancelación\n      } catch (error) {\n        console.error(\"Error al cancelar la compra:\", error);\n        alert(`Error al cancelar la compra: ${error.response ? error.response.data.error : error.message}`);\n      }\n    },\n    getClassEstado(id_estado) {\n      switch (id_estado) {\n        case 1:\n          return \"estado-pendiente\";\n        case 2:\n          return \"estado-enviado\";\n        case 3:\n          return \"estado-entregado\";\n        case 4:\n          return \"estado-anulado\";\n        default:\n          return \"\";\n      }\n    },\n  },\n  mounted() {\n    this.fetchCompras();\n  },\n};\n</script>\n\n<style scoped>\n/* Estilos personalizados para los estados de pedidos */\n.estado-pendiente {\n  border-left: 5px solid #f1c40f;\n}\n\n.estado-enviado {\n  border-left: 5px solid #2980b9;\n}\n\n.estado-entregado {\n  border-left: 5px solid #2ecc71;\n}\n\n.estado-anulado {\n  border-left: 5px solid #e60000;\n  color: #e60000;\n}\n\n.mis-compras {\n  padding: 20px;\n  max-width: 800px;\n  margin: 0 auto;\n  background-color: #f4f4f4;\n  border-radius: 8px;\n}\n\nh1 {\n  font-size: 24px;\n  margin-bottom: 20px;\n  color: #333;\n}\n\nul {\n  list-style-type: none;\n  padding: 0;\n}\n\nli {\n  background: #fff;\n  border: 1px solid #ddd;\n  border-radius: 8px;\n  padding: 15px;\n  margin-bottom: 10px;\n  transition: background-color 0.3s, transform 0.2s;\n}\n\nli:hover {\n  background-color: #eaf2e0;\n  transform: scale(1.02);\n}\n\np {\n  margin: 5px 0;\n  color: #555;\n}\n\np span {\n  font-weight: bold;\n  color: #0a641a;\n}\n\n.btn-cancelar {\n  background-color: #ff4d4d;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  padding: 8px 12px;\n  cursor: pointer;\n  font-size: 14px;\n  transition: background-color 0.3s, transform 0.2s;\n}\n\n.btn-cancelar:hover {\n  background-color: #ff1a1a;\n  transform: scale(1.05);\n}\n\n.btn-cancelar:active {\n  background-color: #e60000;\n}\n\n.no-compras {\n  text-align: center;\n  font-size: 18px;\n  color: #888;\n}\n\n/* Media Queries para Responsividad */\n\n/* Pantallas hasta 768px de ancho */\n@media (max-width: 768px) {\n  .mis-compras {\n    padding: 15px;\n  }\n\n  h1 {\n    font-size: 20px;\n  }\n\n  li {\n    padding: 12px;\n  }\n\n  p {\n    font-size: 14px;\n  }\n}\n\n/* Pantallas hasta 480px de ancho */\n@media (max-width: 480px) {\n  .mis-compras {\n    padding: 10px;\n  }\n\n  h1 {\n    font-size: 18px;\n  }\n\n  li {\n    padding: 10px;\n  }\n\n  p {\n    font-size: 12px;\n  }\n}\n</style>\n"],"mappings":"AA2CA,OAAOA,aAAY,MAAO,gCAAgC;AAC1D,OAAOC,YAAW,MAAO,oBAAoB;AAC7C,OAAOC,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,UAAU,EAAE;IACVH,aAAa;IACbC;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE;IACV,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,YAAYA,CAAA,EAAG;MACnB,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;MAC3C,IAAI,CAACF,KAAK,EAAE;QACVG,KAAK,CAAC,0CAA0C,CAAC;QACjD;MACF;MAEA,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMV,KAAK,CAACW,GAAG,CAC9B,wCAAwC,EACxC;UACEC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUP,KAAK;UAChC,CAAC;UACDQ,MAAM,EAAE;YACNC,UAAU,EAAER,YAAY,CAACC,OAAO,CAAC,YAAY;UAC/C;QACF,CACF,CAAC;QACD,IAAI,CAACL,MAAK,GAAIO,QAAQ,CAACR,IAAI;MAC7B,EAAE,OAAOc,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,+BAA+B,EAAEA,KAAK,CAAC;QACrDP,KAAK,CAAC,+BAA+B,CAAC;MACxC;IACF,CAAC;IACD,MAAMS,cAAcA,CAACC,SAAS,EAAE;MAC9B,MAAMC,YAAW,GAAIC,OAAO,CAAC,mDAAmD,CAAC;MACjF,IAAI,CAACD,YAAY,EAAE;MAEnB,MAAMd,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;MAE3C,IAAI,CAACF,KAAK,EAAE;QACVG,KAAK,CAAC,4DAA4D,CAAC;QACnE;MACF;MAEA,IAAI;QACF,MAAMT,KAAK,CAACsB,MAAM,CAAC,qCAAqCH,SAAS,EAAE,EAAE;UACnEP,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUP,KAAK;UAChC;QACF,CAAC,CAAC;QACFG,KAAK,CAAC,gCAAgC,CAAC;QACvC,IAAI,CAACJ,YAAY,CAAC,CAAC,EAAE;MACvB,EAAE,OAAOW,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,8BAA8B,EAAEA,KAAK,CAAC;QACpDP,KAAK,CAAC,gCAAgCO,KAAK,CAACN,QAAO,GAAIM,KAAK,CAACN,QAAQ,CAACR,IAAI,CAACc,KAAI,GAAIA,KAAK,CAACO,OAAO,EAAE,CAAC;MACrG;IACF,CAAC;IACDC,cAAcA,CAACC,SAAS,EAAE;MACxB,QAAQA,SAAS;QACf,KAAK,CAAC;UACJ,OAAO,kBAAkB;QAC3B,KAAK,CAAC;UACJ,OAAO,gBAAgB;QACzB,KAAK,CAAC;UACJ,OAAO,kBAAkB;QAC3B,KAAK,CAAC;UACJ,OAAO,gBAAgB;QACzB;UACE,OAAO,EAAE;MACb;IACF;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACrB,YAAY,CAAC,CAAC;EACrB;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}