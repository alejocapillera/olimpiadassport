{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      if (this.estaLogueado()) {\n        this.carrito.push(producto);\n        this.calcularTotal();\n        alert(`Producto ${producto.descripcion} agregado al carrito.`);\n      } else {\n        alert(\"Debe iniciar sesi贸n para agregar productos al carrito.\");\n      }\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.calcularTotal();\n    },\n    calcularTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario;\n      }, 0);\n    },\n    comprarAhora(producto) {\n      if (this.estaLogueado()) {\n        alert(`Compraste ${producto.descripcion}.`);\n      } else {\n        alert(\"Debe iniciar sesi贸n para comprar productos.\");\n      }\n    },\n    estaLogueado() {\n      return !!localStorage.getItem(\"token\");\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","data","productos","carrito","totalCarrito","methods","fetchProductos","response","get","Array","isArray","console","error","agregarCarrito","producto","estaLogueado","push","calcularTotal","alert","descripcion","eliminarDelCarrito","index","splice","reduce","total","item","precio_unitario","comprarAhora","localStorage","getItem","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ProductosTienda.vue"],"sourcesContent":["<template>\n  <div class=\"productos-tienda\">\n    <div v-if=\"productos.length > 0\" class=\"productos-grid\">\n      <div\n        v-for=\"producto in productos\"\n        :key=\"producto.id_producto\"\n        class=\"producto-card\"\n      >\n        <div class=\"producto-descripcion\">\n          <h3>{{ producto.descripcion }}</h3>\n          <p>Precio: ${{ producto.precio_unitario }}</p>\n          <p>Stock: {{ producto.stock }}</p>\n        </div>\n        <div class=\"producto-acciones\">\n          <button @click=\"agregarCarrito(producto)\">Agregar al carrito</button>\n          <button @click=\"comprarAhora(producto)\">Comprar ahora</button>\n        </div>\n      </div>\n    </div>\n    <div v-else>\n      <p>No hay productos disponibles.</p>\n    </div>\n\n    <div class=\"carrito\">\n      <h3>Carrito de Compras</h3>\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"index\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }}\n          <button @click=\"eliminarDelCarrito(index)\">Eliminar</button>\n        </li>\n      </ul>\n      <p>Total: ${{ totalCarrito }}</p>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      if (this.estaLogueado()) {\n        this.carrito.push(producto);\n        this.calcularTotal();\n        alert(`Producto ${producto.descripcion} agregado al carrito.`);\n      } else {\n        alert(\"Debe iniciar sesi贸n para agregar productos al carrito.\");\n      }\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.calcularTotal();\n    },\n    calcularTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario;\n      }, 0);\n    },\n    comprarAhora(producto) {\n      if (this.estaLogueado()) {\n        alert(`Compraste ${producto.descripcion}.`);\n      } else {\n        alert(\"Debe iniciar sesi贸n para comprar productos.\");\n      }\n    },\n    estaLogueado() {\n      return !!localStorage.getItem(\"token\");\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\n.productos-tienda {\n  padding: 20px;\n  display: flex;\n}\n\n.productos-grid {\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n  flex: 3;\n}\n\n.producto-card {\n  border: 1px solid #ccc;\n  padding: 20px;\n  width: 200px;\n  text-align: center;\n  background-color: #f9f9f9;\n  border-radius: 8px;\n}\n\n.producto-descripcion h3 {\n  margin: 0;\n  font-size: 18px;\n}\n\n.producto-acciones {\n  margin-top: 10px;\n}\n\nbutton {\n  margin: 5px 0;\n  padding: 8px 16px;\n  background-color: #007bff;\n  color: white;\n  border: none;\n  border-radius: 4px;\n  cursor: pointer;\n}\n\nbutton:hover {\n  background-color: #0056b3;\n}\n\n.carrito {\n  flex: 1;\n  padding-left: 20px;\n  border-left: 2px solid #ccc;\n}\n\n.carrito h3 {\n  margin-top: 0;\n}\n\n.carrito ul {\n  list-style-type: none;\n  padding: 0;\n}\n\n.carrito li {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  margin-bottom: 10px;\n}\n\n.carrito p {\n  font-weight: bold;\n  margin-top: 20px;\n}\n</style>\n"],"mappings":";AAqCA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,EAAE;MACXC,YAAY,EAAE;IAChB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IA