{"ast":null,"code":"import axios from \"axios\";\nimport { BModal, BButton, BFormGroup, BFormInput, BFormSelect } from \"bootstrap-vue-3\";\nexport default {\n  components: {\n    BModal,\n    BButton,\n    BFormGroup,\n    BFormInput,\n    BFormSelect\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      showModalEditar: false,\n      showModalEliminar: false,\n      productoActual: {},\n      productoAEliminar: {},\n      categorias: [],\n      // Lista de categorías para el formulario de edición\n      subcategorias: [],\n      // Lista de subcategorías para el formulario de edición\n      categoriaSeleccionada: null // Categoría seleccionada para cargar subcategorías\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\"http://localhost:3001/api/listaproductos\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    async fetchCategorias() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/categorias\");\n        this.categorias = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener categorías:\", error);\n      }\n    },\n    async fetchSubcategorias() {\n      try {\n        const response = await axios.get(`http://localhost:3001/api/subcategorias/${this.categoriaSeleccionada}`);\n        this.subcategorias = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener subcategorías:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto;\n      this.showModalDetalles = true;\n    },\n    abrirModalEditar(producto) {\n      this.productoActual = {\n        ...producto\n      }; // Copia del producto para edición\n      this.categoriaSeleccionada = producto.id_categoria; // Selecciona la categoría actual\n      this.fetchSubcategorias(); // Obtiene las subcategorías para la categoría actual\n      this.showModalEditar = true;\n    },\n    async editarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.put(`http://localhost:3001/api/productos/${this.productoActual.id_producto}`, this.productoActual, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEditar = false;\n      } catch (error) {\n        console.error(\"Error al editar el producto:\", error);\n      }\n    },\n    abrirModalEliminar(producto) {\n      this.productoAEliminar = producto;\n      this.showModalEliminar = true;\n    },\n    async eliminarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.delete(`http://localhost:3001/api/productos/${this.productoAEliminar.id_producto}`, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEliminar = false;\n      } catch (error) {\n        console.error(\"Error al eliminar el producto:\", error);\n      }\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n    this.fetchCategorias(); // Obtiene las categorías cuando se monta el componente\n  }\n};","map":{"version":3,"names":["axios","BModal","BButton","BFormGroup","BFormInput","BFormSelect","components","data","productos","showModalDetalles","showModalEditar","showModalEliminar","productoActual","productoAEliminar","categorias","subcategorias","categoriaSeleccionada","methods","fetchProductos","token","localStorage","getItem","response","get","headers","Authorization","error","console","fetchCategorias","fetchSubcategorias","verDetallesProducto","producto","abrirModalEditar","id_categoria","editarProducto","put","id_producto","abrirModalEliminar","eliminarProducto","delete","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ListaProductos.vue"],"sourcesContent":["<template>\n  <div class=\"productos-container\">\n    <h1 class=\"productos-title\">Lista de Productos</h1>\n    <div class=\"table-container\">\n      <table class=\"productos-table\">\n        <thead>\n          <tr>\n            <th>Descripción</th>\n            <th>Stock</th>\n            <th>Acciones</th>\n          </tr>\n        </thead>\n        <tbody>\n          <tr v-for=\"producto in productos\" :key=\"producto.id_producto\">\n            <td>{{ producto.descripcion }}</td>\n            <td>{{ producto.stock }}</td>\n            <td>\n              <button @click=\"verDetallesProducto(producto)\" class=\"btn-ver\">\n                Ver Detalles\n              </button>\n              <button @click=\"abrirModalEditar(producto)\" class=\"btn-editar\">\n                Editar\n              </button>\n              <button\n                @click=\"abrirModalEliminar(producto)\"\n                class=\"btn-eliminar\"\n              >\n                Eliminar\n              </button>\n            </td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n\n    <!-- Modal para mostrar detalles del producto -->\n    <b-modal\n      id=\"modalDetallesProducto\"\n      title=\"Detalles del Producto\"\n      v-model=\"showModalDetalles\"\n    >\n      <p><strong>Código:</strong> {{ productoActual.codigo_producto }}</p>\n      <p><strong>Descripción:</strong> {{ productoActual.descripcion }}</p>\n      <p>\n        <strong>Precio Unitario:</strong> {{ productoActual.precio_unitario }}\n      </p>\n      <p><strong>Stock:</strong> {{ productoActual.stock }}</p>\n      <p>\n        <strong>Subcategoría:</strong> {{ productoActual.nombre_subcategoria }}\n      </p>\n      <b-button @click=\"showModalDetalles = false\">Cerrar</b-button>\n    </b-modal>\n\n    <!-- Modal para editar producto -->\n    <b-modal\n      id=\"modalEditarProducto\"\n      title=\"Editar Producto\"\n      v-model=\"showModalEditar\"\n      @ok=\"editarProducto\"\n    >\n      <form @submit.prevent=\"editarProducto\">\n        <b-form-group label=\"Código\">\n          <b-form-input\n            v-model=\"productoActual.codigo_producto\"\n            required\n          ></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Descripción\">\n          <b-form-input\n            v-model=\"productoActual.descripcion\"\n            required\n          ></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Precio Unitario\">\n          <b-form-input\n            type=\"number\"\n            v-model=\"productoActual.precio_unitario\"\n            required\n          ></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Stock\">\n          <b-form-input\n            type=\"number\"\n            v-model=\"productoActual.stock\"\n            required\n          ></b-form-input>\n        </b-form-group>\n        <b-form-group label=\"Categoría\">\n          <b-form-select\n            v-model=\"categoriaSeleccionada\"\n            :options=\"categorias\"\n            @change=\"fetchSubcategorias\"\n            required\n          ></b-form-select>\n        </b-form-group>\n        <b-form-group label=\"Subcategoría\">\n          <b-form-select\n            v-model=\"productoActual.id_subcategoria\"\n            :options=\"subcategorias\"\n            required\n          ></b-form-select>\n        </b-form-group>\n      </form>\n    </b-modal>\n\n    <!-- Modal de confirmación de eliminación -->\n    <b-modal\n      id=\"modalEliminarProducto\"\n      title=\"Eliminar Producto\"\n      v-model=\"showModalEliminar\"\n      @ok=\"eliminarProducto\"\n    >\n      <p>\n        ¿Estás seguro de que deseas eliminar el producto \"{{\n          productoAEliminar.descripcion\n        }}\"?\n      </p>\n    </b-modal>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport {\n  BModal,\n  BButton,\n  BFormGroup,\n  BFormInput,\n  BFormSelect,\n} from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    BModal,\n    BButton,\n    BFormGroup,\n    BFormInput,\n    BFormSelect,\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      showModalEditar: false,\n      showModalEliminar: false,\n      productoActual: {},\n      productoAEliminar: {},\n      categorias: [], // Lista de categorías para el formulario de edición\n      subcategorias: [], // Lista de subcategorías para el formulario de edición\n      categoriaSeleccionada: null, // Categoría seleccionada para cargar subcategorías\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\n          \"http://localhost:3001/api/listaproductos\",\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    async fetchCategorias() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/categorias\");\n        this.categorias = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener categorías:\", error);\n      }\n    },\n    async fetchSubcategorias() {\n      try {\n        const response = await axios.get(\n          `http://localhost:3001/api/subcategorias/${this.categoriaSeleccionada}`\n        );\n        this.subcategorias = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener subcategorías:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto;\n      this.showModalDetalles = true;\n    },\n    abrirModalEditar(producto) {\n      this.productoActual = { ...producto }; // Copia del producto para edición\n      this.categoriaSeleccionada = producto.id_categoria; // Selecciona la categoría actual\n      this.fetchSubcategorias(); // Obtiene las subcategorías para la categoría actual\n      this.showModalEditar = true;\n    },\n    async editarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.put(\n          `http://localhost:3001/api/productos/${this.productoActual.id_producto}`,\n          this.productoActual,\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEditar = false;\n      } catch (error) {\n        console.error(\"Error al editar el producto:\", error);\n      }\n    },\n    abrirModalEliminar(producto) {\n      this.productoAEliminar = producto;\n      this.showModalEliminar = true;\n    },\n    async eliminarProducto() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.delete(\n          `http://localhost:3001/api/productos/${this.productoAEliminar.id_producto}`,\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        this.fetchProductos(); // Actualiza la lista de productos\n        this.showModalEliminar = false;\n      } catch (error) {\n        console.error(\"Error al eliminar el producto:\", error);\n      }\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n    this.fetchCategorias(); // Obtiene las categorías cuando se monta el componente\n  },\n};\n</script>\n\n<style scoped>\n.productos-container {\n  padding: 20px;\n  background-color: #f4f4f4;\n}\n\n.productos-title {\n  text-align: center;\n  color: #333;\n  margin-bottom: 20px;\n}\n\n.table-container {\n  margin: 0 auto;\n  max-width: 100%;\n  overflow-x: auto;\n}\n\n.productos-table {\n  width: 100%;\n  border-collapse: collapse;\n}\n\n.productos-table th,\n.productos-table td {\n  padding: 12px;\n  border: 1px solid #ddd;\n}\n\n.productos-table th {\n  background-color: #0a641a;\n  color: #fff;\n}\n\n.productos-table td {\n  text-align: left;\n}\n\nbutton {\n  padding: 5px 10px;\n  margin: 2px;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  color: #fff;\n  font-size: 14px;\n}\n\n.btn-ver {\n  background-color: #3498db;\n}\n\n.btn-editar {\n  background-color: #f39c12;\n}\n\n.btn-eliminar {\n  background-color: #e74c3c;\n}\n\n/* Media Queries para Responsividad */\n\n/* Pantallas hasta 768px de ancho */\n@media (max-width: 768px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 8px;\n    font-size: 14px;\n  }\n}\n\n/* Pantallas hasta 480px de ancho */\n@media (max-width: 480px) {\n  .productos-table th,\n  .productos-table td {\n    padding: 6px;\n    font-size: 12px;\n  }\n}\n</style>\n"],"mappings":"AA0HA,OAAOA,KAAI,MAAO,OAAO;AACzB,SACEC,MAAM,EACNC,OAAO,EACPC,UAAU,EACVC,UAAU,EACVC,WAAW,QACN,iBAAiB;AAExB,eAAe;EACbC,UAAU,EAAE;IACVL,MAAM;IACNC,OAAO;IACPC,UAAU;IACVC,UAAU;IACVC;EACF,CAAC;EACDE,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,iBAAiB,EAAE,KAAK;MACxBC,eAAe,EAAE,KAAK;MACtBC,iBAAiB,EAAE,KAAK;MACxBC,cAAc,EAAE,CAAC,CAAC;MAClBC,iBAAiB,EAAE,CAAC,CAAC;MACrBC,UAAU,EAAE,EAAE;MAAE;MAChBC,aAAa,EAAE,EAAE;MAAE;MACnBC,qBAAqB,EAAE,IAAI,CAAE;IAC/B,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,QAAO,GAAI,MAAMtB,KAAK,CAACuB,GAAG,CAC9B,0CAA0C,EAC1C;UACEC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUN,KAAK;UAChC;QACF,CACF,CAAC;QACD,IAAI,CAACX,SAAQ,GAAIc,QAAQ,CAACf,IAAI;MAChC,EAAE,OAAOmB,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IACD,MAAME,eAAeA,CAAA,EAAG;MACtB,IAAI;QACF,MAAMN,QAAO,GAAI,M