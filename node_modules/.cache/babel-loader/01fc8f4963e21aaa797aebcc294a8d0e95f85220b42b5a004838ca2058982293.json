{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: 1,\n      productoSeleccionado: {}\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      const itemEnCarrito = this.carrito.find(item => item.id_producto === producto.id_producto);\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({\n          ...producto,\n          cantidad: 1\n        });\n      }\n      this.actualizarTotal();\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.actualizarTotal();\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    mostrarModalCompra(producto) {\n      this.productoSeleccionado = producto;\n      const modal = new bootstrap.Modal(document.getElementById('modalCompra'));\n      modal.show();\n    },\n    async comprarAhora() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n      try {\n        const response = await axios.post(\"http://localhost:3001/api/auth/venta\", {\n          id_cliente: this.id_cliente,\n          productos: [{\n            id_producto: this.productoSeleccionado.id_producto,\n            cantidad: 1,\n            precio_unitario: parseFloat(this.productoSeleccionado.precio_unitario)\n          }],\n          total: parseFloat(this.productoSeleccionado.precio_unitario),\n          metodo_pago_id: this.metodo_pago_id\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Venta procesada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          const modal = bootstrap.Modal.getInstance(document.getElementById('modalCompra'));\n          modal.hide();\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","data","productos","carrito","totalCarrito","id_cliente","metodo_pago_id","productoSeleccionado","methods","fetchProductos","response","get","Array","isArray","console","error","agregarCarrito","producto","itemEnCarrito","find","item","id_producto","cantidad","push","actualizarTotal","eliminarDelCarrito","index","splice","reduce","total","precio_unitario","mostrarModalCompra","modal","bootstrap","Modal","document","getElementById","show","comprarAhora","token","localStorage","getItem","alert","post","parseFloat","headers","Authorization","message","getInstance","hide","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ProductosTienda.vue"],"sourcesContent":["<template>\n  <div class=\"productos-tienda\">\n    <div v-if=\"productos.length > 0\" class=\"productos-grid\">\n      <div\n        v-for=\"producto in productos\"\n        :key=\"producto.id_producto\"\n        class=\"producto-card\"\n      >\n        <div class=\"producto-descripcion\">\n          <h3>{{ producto.descripcion }}</h3>\n          <p>Precio: ${{ producto.precio_unitario }}</p>\n        </div>\n        <div class=\"producto-acciones\">\n          <button @click=\"agregarCarrito(producto)\">Agregar al carrito</button>\n          <button @click=\"mostrarModalCompra(producto)\">Comprar ahora</button>\n        </div>\n      </div>\n    </div>\n    <div v-else>\n      <p>No hay productos disponibles.</p>\n    </div>\n\n    <div v-if=\"carrito.length > 0\" class=\"carrito\">\n      <h3>Carrito de compras</h3>\n      <ul>\n        <li v-for=\"(item, index) in carrito\" :key=\"index\">\n          {{ item.descripcion }} - ${{ item.precio_unitario }} x\n          {{ item.cantidad }}\n          <button @click=\"eliminarDelCarrito(index)\">Eliminar</button>\n        </li>\n      </ul>\n      <p>Total: ${{ totalCarrito }}</p>\n      <button @click=\"procesarVenta\">Procesar venta</button>\n    </div>\n\n    <!-- Modal para seleccionar método de pago y ver detalles del producto -->\n    <div\n      class=\"modal fade\"\n      id=\"modalCompra\"\n      tabindex=\"-1\"\n      aria-labelledby=\"modalCompraLabel\"\n      aria-hidden=\"true\"\n    >\n      <div class=\"modal-dialog\">\n        <div class=\"modal-content\">\n          <div class=\"modal-header\">\n            <h5 class=\"modal-title\" id=\"modalCompraLabel\">Comprar ahora</h5>\n            <button\n              type=\"button\"\n              class=\"btn-close\"\n              data-bs-dismiss=\"modal\"\n              aria-label=\"Close\"\n            ></button>\n          </div>\n          <div class=\"modal-body\">\n            <h3>{{ productoSeleccionado.descripcion }}</h3>\n            <p>Precio: ${{ productoSeleccionado.precio_unitario }}</p>\n            <p>Total: ${{ productoSeleccionado.precio_unitario }}</p>\n            <label for=\"metodoPago\">Selecciona el método de pago:</label>\n            <select\n              id=\"metodoPago\"\n              v-model=\"metodo_pago_id\"\n              class=\"form-select\"\n            >\n              <option value=\"1\">Tarjeta de Crédito</option>\n              <option value=\"2\">Rapipago</option>\n              <option value=\"3\">Mercadopago</option>\n            </select>\n          </div>\n          <div class=\"modal-footer\">\n            <button\n              type=\"button\"\n              class=\"btn btn-secondary\"\n              data-bs-dismiss=\"modal\"\n            >\n              Cancelar\n            </button>\n            <button type=\"button\" class=\"btn btn-primary\" @click=\"comprarAhora\">\n              Confirmar Compra\n            </button>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  data() {\n    return {\n      productos: [],\n      carrito: [],\n      totalCarrito: 0,\n      id_cliente: null,\n      metodo_pago_id: 1,\n      productoSeleccionado: {},\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const response = await axios.get(\"http://localhost:3001/api/pro\");\n        if (Array.isArray(response.data)) {\n          this.productos = response.data;\n        } else {\n          console.error(\"Respuesta inesperada:\", response.data);\n        }\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    agregarCarrito(producto) {\n      const itemEnCarrito = this.carrito.find(\n        (item) => item.id_producto === producto.id_producto\n      );\n\n      if (itemEnCarrito) {\n        itemEnCarrito.cantidad++;\n      } else {\n        this.carrito.push({ ...producto, cantidad: 1 });\n      }\n\n      this.actualizarTotal();\n    },\n    eliminarDelCarrito(index) {\n      this.carrito.splice(index, 1);\n      this.actualizarTotal();\n    },\n    actualizarTotal() {\n      this.totalCarrito = this.carrito.reduce((total, item) => {\n        return total + item.precio_unitario * item.cantidad;\n      }, 0);\n    },\n    mostrarModalCompra(producto) {\n      this.productoSeleccionado = producto;\n      const modal = new bootstrap.Modal(document.getElementById('modalCompra'));\n      modal.show();\n    },\n    async comprarAhora() {\n      const token = localStorage.getItem(\"token\");\n      this.id_cliente = localStorage.getItem(\"id_cliente\");\n\n      if (!token) {\n        alert(\"Por favor, inicie sesión para continuar.\");\n        return;\n      }\n\n      if (!this.id_cliente) {\n        alert(\"El cliente no está definido.\");\n        return;\n      }\n\n      try {\n        const response = await axios.post(\n          \"http://localhost:3001/api/auth/venta\",\n          {\n            id_cliente: this.id_cliente,\n            productos: [{\n              id_producto: this.productoSeleccionado.id_producto,\n              cantidad: 1,\n              precio_unitario: parseFloat(this.productoSeleccionado.precio_unitario),\n            }],\n            total: parseFloat(this.productoSeleccionado.precio_unitario),\n            metodo_pago_id: this.metodo_pago_id,\n          },\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n\n        if (response.data.message === \"Venta registrada exitosamente\") {\n          alert(\"Venta procesada con éxito.\");\n          this.carrito = [];\n          this.totalCarrito = 0;\n          const modal = bootstrap.Modal.getInstance(document.getElementById('modalCompra'));\n          modal.hide();\n        } else {\n          alert(\"Error al procesar la venta.\");\n        }\n      } catch (error) {\n        console.error(\"Error al procesar la venta:\", error);\n        alert(\"Error al procesar la venta.\");\n      }\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n\n<style scoped>\n.productos-tienda {\n  padding: 20px;\n}\n\n.productos-grid {\n  display: flex;\n  flex-wrap: wrap;\n  gap: 20px;\n}\n\n.producto-card {\n  border: 1px solid #ccc;\n  padding: 20px;\n  width: 200px;\n  text-align: center;\n  background-color: #f9f9f9;\n  border-radius: 8px;\n}\n\n.producto-descripcion h3 {\n  margin: 0;\n  font-size: 18px;\n}\n\n.producto-acciones {\n  margin-top: 10px;\n}\n\nbutton {\n  margin: 5px 0;\n  padding: 8px 16px;\n  background-color: #007bff;\n  color: white;\n  border: none;\n  border-radius: 4px;\n  cursor: pointer;\n}\n\nbutton:hover {\n  background-color: #0056b3;\n}\n\n.carrito {\n  position: fixed;\n  right: 20px;\n  top: 20px;\n  width: 300px;\n  background-color: #fff;\n  border: 1px solid #ccc;\n  padding: 20px;\n  border-radius: 8px;\n}\n\n.carrito ul {\n  list-style-type: none;\n  padding: 0;\n}\n\n.carrito li {\n  display: flex;\n  justify-content: space-between;\n  margin-bottom: 10px;\n}\n</style>\n"],"mappings":";AAwFA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,EAAE;MACXC,YAAY,EAAE,CAAC;MACfC,UAAU,EAAE,IAAI;MAChBC,cAAc,EAAE,CAAC;MACjBC,oBAAoB,EAAE,CAAC;IACzB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMV,KAAK,CAACW,GAAG,CAAC,+BAA+B,CAAC;QACjE,IAAIC,KAAK,CAACC,OAAO,CAACH,QAAQ,CAACT,IAAI,CAAC,EAAE;UAChC,IAAI,CAACC,SAAQ,GAAIQ,QAAQ,CAACT,IAAI;QAChC,OAAO;UACLa,OAAO,CAACC,KAAK,CAAC,uBAAuB,EAAEL,QAAQ,CAACT,IAAI,CAAC;QACvD;MACF,EAAE,OAAOc,KAAK,EAAE;QACdD,OAAO,CAACC,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IACDC,cAAcA,CAACC,QAAQ,EAAE;MACvB,MAAMC,aAAY,GAAI,IAAI,CAACf,OAAO,CAACgB,IAAI,CACpCC,IAAI,IAAKA,IAAI,CAACC,WAAU,KAAMJ,QAAQ,CAACI,WAC1C,CAAC;MAED,IAAIH,aAAa,EAAE;QACjBA,aAAa,CAACI,QAAQ,EAAE;MAC1B,OAAO;QACL,IAAI,CAACnB,OAAO,CAACoB,IAAI,CAAC;UAAE,GAAGN,QAAQ;UAAEK,QAAQ,EAAE;QAAE,CAAC,CAAC;MACjD;MAEA,IAAI,CAACE,eAAe,CAAC,CAAC;IACxB,CAAC;IACDC,kBAAkBA,CAACC,KAAK,EAAE;MACxB,IAAI,CAACvB,OAAO,CAACwB,MAAM,CAA