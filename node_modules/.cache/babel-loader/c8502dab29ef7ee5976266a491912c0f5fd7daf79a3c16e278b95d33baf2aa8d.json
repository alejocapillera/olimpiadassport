{"ast":null,"code":"import axios from \"axios\";\nimport { BModal, BButton } from \"bootstrap-vue-3\";\nexport default {\n  components: {\n    BModal,\n    BButton\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      productoActual: {} // Objeto para almacenar el producto actual\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\"http://localhost:3001/api/listaproductos\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto; // Almacena el producto seleccionado\n      this.showModalDetalles = true; // Muestra el modal\n    }\n  },\n  mounted() {\n    this.fetchProductos();\n  }\n};","map":{"version":3,"names":["axios","BModal","BButton","components","data","productos","showModalDetalles","productoActual","methods","fetchProductos","token","localStorage","getItem","response","get","headers","Authorization","error","console","verDetallesProducto","producto","mounted"],"sources":["C:\\Users\\estudiante\\Desktop\\sport-tienda\\src\\components\\ListaProductos.vue"],"sourcesContent":["<template>\n  <div>\n    <h1>Lista de Productos</h1>\n    <table>\n      <thead>\n        <tr>\n          <th>Descripción</th>\n          <th>Stock</th>\n          <th>Acciones</th>\n          <!-- Columna para acciones -->\n        </tr>\n      </thead>\n      <tbody>\n        <tr v-for=\"producto in productos\" :key=\"producto.id_producto\">\n          <td>{{ producto.descripcion }}</td>\n          <td>{{ producto.stock }}</td>\n          <td>\n            <button @click=\"verDetallesProducto(producto)\">Ver Detalles</button>\n          </td>\n        </tr>\n      </tbody>\n    </table>\n\n    <!-- Modal para mostrar detalles del producto -->\n    <b-modal\n      id=\"modalDetallesProducto\"\n      title=\"Detalles del Producto\"\n      v-model=\"showModalDetalles\"\n    >\n      <p><strong>Código:</strong> {{ productoActual.codigo_producto }}</p>\n      <p><strong>Descripción:</strong> {{ productoActual.descripcion }}</p>\n      <p>\n        <strong>Precio Unitario:</strong> {{ productoActual.precio_unitario }}\n      </p>\n      <p><strong>Stock:</strong> {{ productoActual.stock }}</p>\n      <p>\n        <strong>Subcategoría:</strong> {{ productoActual.nombre_subcategoria }}\n      </p>\n      <b-button @click=\"showModalDetalles = false\">Cerrar</b-button>\n    </b-modal>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport { BModal, BButton } from \"bootstrap-vue-3\";\n\nexport default {\n  components: {\n    BModal,\n    BButton,\n  },\n  data() {\n    return {\n      productos: [],\n      showModalDetalles: false,\n      productoActual: {}, // Objeto para almacenar el producto actual\n    };\n  },\n  methods: {\n    async fetchProductos() {\n      try {\n        const token = localStorage.getItem(\"token\");\n        const response = await axios.get(\n          \"http://localhost:3001/api/listaproductos\",\n          {\n            headers: {\n              Authorization: `Bearer ${token}`,\n            },\n          }\n        );\n        this.productos = response.data;\n      } catch (error) {\n        console.error(\"Error al obtener los productos:\", error);\n      }\n    },\n    verDetallesProducto(producto) {\n      this.productoActual = producto; // Almacena el producto seleccionado\n      this.showModalDetalles = true; // Muestra el modal\n    },\n  },\n  mounted() {\n    this.fetchProductos();\n  },\n};\n</script>\n\n<style scoped>\ntable {\n  width: 100%;\n  border-collapse: collapse;\n}\n\nth,\ntd {\n  padding: 10px;\n  border: 1px solid #ddd;\n}\n\nth {\n  background-color: #f4f4f4;\n}\n</s